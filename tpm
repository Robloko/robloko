-- [ULTRA SIMPLE TELEPORT SCRIPT] --
-- NO retries, NO attempts, ONE-TIME check

local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")

local player = Players.LocalPlayer

-- Your positions
local GOAL_POSITION = Vector3.new(-255.10, 30.89, -1831.46)  -- Where you want to BE
local TARGET_POSITION = Vector3.new(-12025.122, 9529.577, -11970.038)  -- Where to teleport FROM
local GOAL_TOLERANCE = 5  -- Very strict: must be within 5 units

-- Debug
local function debugPrint(msg)
    print("[SimpleTP] " .. tostring(msg))
end

-- Get position
local function getCurrentPosition()
    local char = player.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        return char.HumanoidRootPart.Position
    end
    return nil
end

-- Check if at goal
local function isAtGoal()
    local currentPos = getCurrentPosition()
    if not currentPos then return false end
    
    local distance = (currentPos - GOAL_POSITION).Magnitude
    debugPrint("Current: " .. tostring(currentPos))
    debugPrint("Distance to goal: " .. string.format("%.2f", distance))
    
    return distance <= GOAL_TOLERANCE
end

-- Simple teleport (no camera, no keys, no house exit)
local function simpleTeleport()
    local char = player.Character
    if char and char:FindFirstChild("HumanoidRootPart") then
        char.HumanoidRootPart.CFrame = CFrame.new(TARGET_POSITION)
        debugPrint("Teleported to target position")
        return true
    end
    return false
end

-- MAIN LOGIC
debugPrint("=== POSITION CHECK ===")

-- FIRST AND ONLY CHECK
if isAtGoal() then
    debugPrint("======================================")
    debugPrint("ALREADY AT GOAL POSITION!")
    debugPrint("DOING ABSOLUTELY NOTHING.")
    debugPrint("Script will not touch anything.")
    debugPrint("======================================")
else
    debugPrint("NOT at goal position.")
    debugPrint("Performing ONE-TIME teleport...")
    
    -- ONE teleport, NO retries, NO attempts
    simpleTeleport()
    
    debugPrint("Teleport complete. Script finished.")
end

debugPrint("=== SCRIPT END ===")
