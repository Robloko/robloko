-- INITIALIZATION AND MAIN LOOP
-- ==================================================================

-- Initialize session tracking
lastMoneyAmount, lastPotionAmount = getCurrentMoneyAndPotions()

-- Update pet dropdown after a short delay
task.spawn(function()
    task.wait(2)
    updatePetDropdown()
end)

-- Main loop to update displays
local function mainLoop()
    while true do
        updateSessionDisplay()
        updateGingerbreadLabel()
        task.wait(1)
    end
end

-- Start the main loop
coroutine.wrap(mainLoop)()

-- AUTO-START: Begin automation immediately
task.wait(5)
autoStartEverything()

-- Auto-refresh pet list every 60 seconds
task.spawn(function()
    while true do
        task.wait(60)
        updatePetDropdown()
        updateTradePetTypeDropdown()
        updateTradePlayerDropdown()
    end
end)

-- Delayed notification to confirm auto-start
task.wait(3)
Rayfield:Notify({
    Title = "COCOON Loaded",
    Content = "Integrated PetFarm & Winter Events auto-started!\nPet selection is now working!",
    Duration = 5,
    Image = 4483362458
})

