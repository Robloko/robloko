-- Small Script to Go to Main Map and Then to Specific Character Position
-- Based on logic from ress0 ‚Äî –∫–æ–ø–∏—è.txt
-- Added respawn and unsubscribe from home at the beginning
-- Added choose Baby team at the beginning (from b1.txt)
-- Added baby ailment detection and handling (from bb3.txt, integrated with monitoring)
-- Added camera reset after arriving at character position
-- Integrated furniture and food handling for baby ailments
-- Added beach_party ailment handling: teleport to character position if detected
-- Updated bored ailment handling: teleport to specific bored position instead of using Piano
-- Added school ailment handling: teleport to school character position, set camera, pressW
-- Added salon ailment handling: teleport to salon character position, set camera, pressW
-- Added pizza_party ailment handling: teleport to pizza_party character position, set camera, pressW
-- ADDED: PetFarm integration from w1.txt - Auto-equip pet on arrival, monitor/handle pet ailments (including sleepy/dirty)

repeat task.wait() until game:IsLoaded()
repeat task.wait() until game.Players.LocalPlayer
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local VirtualInputManager = game:GetService("VirtualInputManager")
local player = Players.LocalPlayer

-----------------------------------------------------
-- UTILITIES (Simplified from ress0)
-----------------------------------------------------
local function log(msg) print("[MainMap Teleporter] " .. tostring(msg)) end
local function getChar() return player.Character or player.CharacterAdded:Wait() end
local function safeTp(pos)
    return pcall(function()
        local hrp = getChar():FindFirstChild("HumanoidRootPart")
        if hrp then hrp.CFrame = CFrame.new(pos); task.wait(0.3) end
    end)
end
local function setCam(pos, look)
    pcall(function()
        local cam = Workspace.CurrentCamera
        if cam then cam.CameraType = Enum.CameraType.Scriptable; cam.CFrame = CFrame.new(pos, look) end
    end)
end
local function resetCam()
    pcall(function()
        local cam = Workspace.CurrentCamera
        if cam then cam.CameraType = Enum.CameraType.Custom end
    end)
end
local function pressW()
    pcall(function()
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.W, false, game)
        task.wait(0.1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.W, false, game)
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.S, false, game)
        task.wait(0.1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.S, false, game)
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.W, false, game)
        task.wait(0.1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.W, false, game)
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.W, false, game)
        task.wait(1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.W, false, game)
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.S, false, game)
        task.wait(1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.S, false, game)
    end)
end
local function isNear(pos, dist)
    dist = dist or 60
    local success, result = pcall(function()
        local hrp = getChar():FindFirstChild("HumanoidRootPart")
        return hrp and (hrp.Position - pos).Magnitude < dist
    end)
    return success and result or false
end

local function pressS()
    pcall(function()
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.S, false, game)
        task.wait(0.1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.S, false, game)
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.S, false, game)
        task.wait(0.1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.S, false, game)
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.S, false, game)
        task.wait(0.1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.S, false, game)
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.s, false, game)
        task.wait(1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.s, false, game)
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.S, false, game)
        task.wait(1)
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.S, false, game)
    end)
end
local function isNear(pos, dist)
    dist = dist or 60
    local success, result = pcall(function()
        local hrp = getChar():FindFirstChild("HumanoidRootPart")
        return hrp and (hrp.Position - pos).Magnitude < dist
    end)
    return success and result or false
end

-----------------------------------------------------
-- PETFARM INTEGRATION FROM w1.txt
-----------------------------------------------------
-- Debug settings
local DEBUG_MODE = true
local function debugPrint(message)
    if not DEBUG_MODE then return end
    local hours = os.date("%H")
    local minutes = os.date("%M")
    local seconds = os.date("%S")
    local timestamp = string.format("[%s:%s:%s]", hours, minutes, seconds)
    print(timestamp .. " [PetFarm] " .. message)
end

-- PetFarm variables
local PetFarmMode = true  -- Auto-enabled
local petFarmPetID = nil
local lastValidPetID = nil

-- Ailment to Furniture Mapping for PETS (from w1)
local PET_AILMENT_TASKS = {
    sleepy = "BasicBed",
    hungry = "PetFoodBowl",
    thirsty = "PetWaterBowl",
    dirty = "CheapPetBathtub",
    bored = "Piano",
    toilet = "AilmentsRefresh2024LitterBox",
    play = "THROW_TOY",
    walk = "WALK_HANDLER",
    ride = "STROLLER_HANDLER",
    sick = "HEALING_APPLE",
    mystery = "MYSTERY_HANDLER",
    pet_me = "PET_ME_HANDLER"
}

-- Task cooldowns to prevent spam
local petLastTaskTime = {}
local TASK_COOLDOWN = 30 -- seconds

-- Pre-cache API references
local API = ReplicatedStorage:WaitForChild("API")

-- Function to find best starter pet (from w1)
local function findBestStarterPet()
    debugPrint("Finding best starter pet...")
    local clientData = require(ReplicatedStorage.ClientModules.Core.ClientData)
    local playerData = clientData.get_data()[player.Name]
    if not playerData or not playerData.inventory or not playerData.inventory.pets then
        debugPrint("No pet data found")
        return nil
    end

    local starterEggPet = nil
    local aged6Dog = nil
    local aged6Cat = nil

    for _, petData in pairs(playerData.inventory.pets) do
        if petData and petData.id and petData.properties then
            local petIdLower = tostring(petData.id):lower()
            local age = petData.properties.age or 0
            if petIdLower:find("starter_egg") then
                starterEggPet = petData.unique
            elseif age == 6 and (petIdLower:find("dog") or petIdLower:find("practice_dog")) then
                aged6Dog = petData.unique
            elseif age == 6 and petIdLower:find("cat") then
                aged6Cat = petData.unique
            end
        end
    end

    local selected = starterEggPet or aged6Dog or aged6Cat
    if selected then
        debugPrint("Selected starter pet: " .. tostring(selected))
    else
        debugPrint("No suitable starter pet found, selecting first available")
        for _, petData in pairs(playerData.inventory.pets) do
            if petData and petData.unique then
                selected = petData.unique
                break
            end
        end
    end
    return selected
end

-- Function to ensure pet is equipped (from w1)
local function ensurePetEquipped(petUniqueID, maxAttempts)
    maxAttempts = maxAttempts or 10
    local attempts = 0
    while attempts < maxAttempts do
        attempts = attempts + 1
        local clientData = require(ReplicatedStorage.ClientModules.Core.ClientData)
        local playerData = clientData.get_data()[player.Name]
        local isEquipped = false
        if playerData and playerData.equip_manager then
            for _, equipped in ipairs(playerData.equip_manager) do
                if equipped.unique == petUniqueID then
                    isEquipped = true
                    break
                end
            end
        end
        if isEquipped then
            debugPrint("Pet " .. petUniqueID .. " confirmed equipped")
            return true
        else
            debugPrint("Pet not equipped, attempt " .. attempts .. " - equipping...")
            local success, err = pcall(function()
                return API["ToolAPI/Equip"]:InvokeServer(petUniqueID, {use_sound_delay = true, equip_as_last = false})
            end)
            if not success then
                debugPrint("Equip failed: " .. tostring(err))
            end
            task.wait(2)
        end
    end
    debugPrint("Failed to equip pet after " .. maxAttempts .. " attempts")
    return false
end

-- Auto-equip pet on arrival
local function autoEquipPet()
    debugPrint("Auto-equipping pet for PetFarm...")
    local bestPetID = findBestStarterPet()
    if not bestPetID then
        debugPrint("No pet found for auto-equip")
        return false
    end
    petFarmPetID = bestPetID
    lastValidPetID = bestPetID
    local equipped = ensurePetEquipped(bestPetID, 5)
    if equipped then
        debugPrint("Pet equipped successfully: " .. tostring(bestPetID))
        return true
    else
        debugPrint("Failed to equip pet")
        return false
    end
end

-- Enhanced helper to extract pet ailment key (adapted from baby version)
local function extractPetAilmentKey(ailment)
    if type(ailment) == "table" then
        local candidates = {"type", "name", "ailment", "id", "key", "kind"}
        for _, field in ipairs(candidates) do
            local val = ailment[field]
            if type(val) == "string" then
                local lowerVal = val:lower()
                if PET_AILMENT_TASKS[lowerVal] then
                    debugPrint("Extracted pet ailment '" .. lowerVal .. "' from field '" .. field .. "'")
                    return lowerVal
                end
            end
        end
        for k, v in pairs(ailment) do
            if type(v) == "string" then
                local lowerV = v:lower()
                if PET_AILMENT_TASKS[lowerV] then
                    debugPrint("Found matching pet ailment string '" .. lowerV .. "' in table key '" .. tostring(k) .. "'")
                    return lowerV
                end
            elseif type(v) == "table" then
                local subKey = extractPetAilmentKey(v)
                if subKey ~= "unknown" then
                    return subKey
                end
            end
        end
        debugPrint("Unknown pet ailment table structure")
        return "unknown"
    else
        local str = tostring(ailment):lower()
        if PET_AILMENT_TASKS[str] then
            return str
        end
        return str
    end
end

-- Print available pet ailments (adapted)
local function printAvailablePetAilmentsCompact()
    debugPrint("üîç PET AILMENTS (COMPACT)")
    debugPrint("=========================")
    local playerData = getPlayerData()
    if not playerData or not playerData.ailments_manager or not playerData.ailments_manager.pets then
        debugPrint("No pet ailments found.")
        return
    end
   
    local petAilments = playerData.ailments_manager.pets
    local count = 0
    local actionableCount = 0
   
    debugPrint(string.format("%-5s %-36s %-15s %-10s", "No.", "Pet Unique ID", "Ailment", "Actionable"))
    debugPrint(string.rep("-", 70))
   
    for petUniqueID, ailment in pairs(petAilments) do
        local ailmentKey = extractPetAilmentKey(ailment)
        local isActionable = PET_AILMENT_TASKS[ailmentKey] and ailmentKey ~= "unknown"
        if isActionable then actionableCount = actionableCount + 1 end
        count = count + 1
        local status = isActionable and "YES" or "NO"
        debugPrint(string.format("%-5d %-36s %-15s %-10s", count, petUniqueID:sub(1, 36), ailmentKey, status))
    end
   
    debugPrint(string.rep("-", 70))
    debugPrint(string.format("Total pet ailments: %d (Actionable: %d)", count, actionableCount))
end

-- Monitoring and handling loop for PET ailments (adapted from w1's monitorAndHandleAilments)
local function monitorAndHandlePetAilments()
    debugPrint("Starting pet ailment monitoring and handling...")
    local lastScanTime = 0
    local SCAN_INTERVAL = 10 -- seconds
    local currentTime = os.time()
   
    while PetFarmMode do
        currentTime = os.time()
        local playerData = getPlayerData()
       
        if playerData and playerData.ailments_manager and playerData.ailments_manager.pets then
            local foundActionable = false
           
            for petUniqueID, ailmentType in pairs(playerData.ailments_manager.pets) do
                if petUniqueID == petFarmPetID then  -- Only handle for equipped pet
                    local ailmentKey = extractPetAilmentKey(ailmentType)
                    local taskName = PET_AILMENT_TASKS[ailmentKey]
                   
                    if taskName then
                        foundActionable = true
                        -- Check cooldown
                        if not petLastTaskTime[ailmentKey] or (currentTime - petLastTaskTime[ailmentKey]) >= TASK_COOLDOWN then
                            if ailmentKey == "sleepy" then
                                debugPrint("Pet sleepy ailment detected for " .. petUniqueID .. " ‚Üí Using BasicBed")
                                local success = useFurnitureWithLocalPlayer("BasicBed")
                                if success then
                                    petLastTaskTime[ailmentKey] = currentTime
                                end
                            elseif ailmentKey == "dirty" then
                                debugPrint("Pet dirty ailment detected for " .. petUniqueID .. " ‚Üí Using CheapPetBathtub")
                                local success = useFurnitureWithLocalPlayer("CheapPetBathtub")
                                if success then
                                    petLastTaskTime[ailmentKey] = currentTime
                                end
                            else
                                -- For other ailments, log for now (extend as needed, e.g., from w1)
                                debugPrint("Pet " .. ailmentKey .. " ailment detected for " .. petUniqueID .. " ‚Üí Task: " .. taskName .. " (handled in full w1)")
                                -- Placeholder: Extend with full handlers from w1 if needed
                                petLastTaskTime[ailmentKey] = currentTime
                            end
                            break -- Handle one at a time
                        else
                            debugPrint(ailmentKey .. " on cooldown (" .. (TASK_COOLDOWN - (currentTime - petLastTaskTime[ailmentKey])) .. "s remaining)")
                        end
                    end
                end
            end
           
            if not foundActionable and currentTime - lastScanTime >= 60 then
                printAvailablePetAilmentsCompact()
                lastScanTime = currentTime
            end
        else
            if currentTime - lastScanTime >= 60 then
                printAvailablePetAilmentsCompact()
                lastScanTime = currentTime
            end
        end
       
        task.wait(SCAN_INTERVAL)
    end
end

-- Check and buy missing furniture (expanded for PET furniture from w1)
local function checkAndBuyMissingFurniture()
    log("Checking for missing furniture (baby + pet)...")
    local missingFurniture = {}
   
    -- Baby furniture (existing)
    local campingShowerFound = findFurnitureByName("CampingShower")
    if not campingShowerFound then
        log("CampingShower not found, adding to buy list")
        table.insert(missingFurniture, {
            kind = "camping_shower",
            properties = {
                cframe = CFrame.new(25.55991554260254, 30.25162124633789, -1049.5599365234375, -0.6118413805961609, 0, 0.7909806966781616, 0, 1, 0, -0.7909806966781616, 0, -0.6118413805961609)
            }
        })
    else
        log("CampingShower found in house")
    end
   
    local sleepingBagFound = findFurnitureByName("SleepingBag")
    if not sleepingBagFound then
        log("SleepingBag not found, adding to buy list")
        table.insert(missingFurniture, {
            kind = "sleeping_bag",
            properties = {
                cframe = CFrame.new(6.224581718444824, 28.444856643676758, -1058.27001953125, 0.9946262836456299, -0.02014518901705742, 0.10155431926250458, 0.00000843508678372018, 0.9809029698371887, 0.194497749209404, -0.10353313386440277, -0.19345171749591827, 0.9756320118904114)
            }
        })
    else
        log("SleepingBag found in house")
    end
     
    if #missingFurniture > 0 then
        log("Buying " .. #missingFurniture .. " missing furniture items...")
        local args = {missingFurniture}
        local success, result = pcall(function()
            return API:WaitForChild("HousingAPI/BuyFurnitures"):InvokeServer(unpack(args))
        end)
        if success then
            log("Successfully purchased missing furniture")
            task.wait(3)
        else
            log("Failed to buy furniture: " .. tostring(result))
        end
    else
        log("All furniture found, no purchases needed")
    end
end

