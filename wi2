--[[
    Simple API Finder
    -----------------
    This script searches ReplicatedStorage for folders ending in "API"
    and lists their contents (RemoteFunctions and RemoteEvents).

    HOW TO USE:
    1. Open the Developer Console (View -> Output).
    2. Paste this script into the Command Bar and press Enter, OR
    3. Put it in a LocalScript and run the game.
]]

-- Get the service where APIs are usually stored
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Function to find and print APIs
local function findAPIs()
    print("ğŸ” Searching for API folders in ReplicatedStorage...")
    print("=====================================================")

    -- A counter to see how many APIs we found
    local apiCount = 0

    -- Loop through every item in ReplicatedStorage
    for _, item in ipairs(ReplicatedStorage:GetChildren()) do
        -- Check if the item is a Folder and its name ends with "API"
        if item:IsA("Folder") and string.match(item.Name, "API$") then
            apiCount = apiCount + 1
            print("âœ… Found API: " .. item.Name)
            print("  -> Functions/Events:")

            -- Now loop through the children of this API folder
            for _, apiFunction in ipairs(item:GetChildren()) do
                -- We are looking for RemoteFunctions and RemoteEvents
                if apiFunction:IsA("RemoteFunction") or apiFunction:IsA("RemoteEvent") then
                    print("    - " .. apiFunction.Name .. " (" .. apiFunction.ClassName .. ")")
                end
            end
            print("") -- Add a blank line for readability
        end
    end

    print("=====================================================")
    if apiCount > 0 then
        print("âœ… Search complete. Found " .. apiCount .. " API folders.")
    else
        print("âŒ Search complete. No API folders found ending with 'API'.")
    end
end

-- Run the search
findAPIs()
