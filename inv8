local function printAvailablePets()
    local success, errorMsg = pcall(function()
        local clientData = require(game:GetService("ReplicatedStorage").ClientModules.Core.ClientData)
        local playerData = clientData.get_data()[game:GetService("Players").LocalPlayer.Name]

        if not playerData or not playerData.inventory or not playerData.inventory.pets then
            print("No pets found in inventory!")
            return
        end

        print("=== AVAILABLE PETS IN INVENTORY ===")
        print(string.format("%-5s | %-20s | %-5s | %-10s | %-36s", "No.", "Name", "Age", "Status", "Unique ID"))

        local petCount = 0
        for petIndex, petData in pairs(playerData.inventory.pets) do
            petCount = petCount + 1
            local name = petData.id or "Unknown"
            local age = petData.properties.age or "?"
            local neonStatus = petData.properties.neon and "NEON" or ""
            local megaStatus = petData.properties.mega and "MEGA" or ""
            local status = neonStatus .. (neonStatus ~= "" and megaStatus ~= "" and " " or "") .. megaStatus
            status = status ~= "" and status or "Normal"

            print(string.format("%-5d | %-20s | %-5s | %-10s | %-36s",
                petCount, name, age, status, petData.unique))
        end

        print("Total pets: " .. petCount)
        print("=========================================")
    end)

    if not success then
        print("Error reading pets data: " .. tostring(errorMsg))
    end
end

-- Вызовите функцию для вывода информации о питомцах
printAvailablePets()
