-- ADOPT ME! — РАБОТАЕТ НА 1000% (2025) — ПИТОМЦЫ + БОЛЕЗНИ
-- ВСТАВЬ → ЖДИ 5 СЕК → F9 → ВСЁ ГОТОВО

repeat task.wait() until game:IsLoaded()
task.wait(5)

local data = game:GetService("Players").LocalPlayer:WaitForChild("PlayerGui"):WaitForChild("MainGui"):WaitForChild("Data").Value

print("\nADOPT ME! — ТВОИ ПИТОМЦЫ И БОЛЕЗНИ")
print(string.rep("=", 50))

-- БОЛЕЗНИ
if data.ailments_manager and next(data.ailments_manager) then
    print("БОЛЕЗНИ:")
    for k, v in pairs(data.ailments_manager) do
        if typeof(v) == "table" then
            for id, ail in pairs(v) do
                print("  • " .. id:sub(1,10) .. "... → " .. tostring(ail))
            end
        end
    end
else
    print("БОЛЕЗНИ: Нет")
end
print("")

-- ПИТОМЦЫ
local pets = data.pet_manager and data.pet_manager.pets or data.pets or data.inventory.pets
local count = 0
for _ in pairs(pets or {}) do count += 1 end

print("ПИТОМЦЕВ: " .. count)
if count > 0 then
    local list = {}
    for id, pet in pairs(pets) do
        local p = pet.Properties or pet
        local name = p.Name or "???"
        local rarity = p.Rarity or ""
        local age = p.Age or 0
        local ageStr = age < 6 and "Newborn"
                    or age < 18 and "Junior"
                    or age < 36 and "Pre-Teen"
                    or age < 60 and "Teen"
                    or age < 100 and "Post-Teen"
                    or "Full Grown"
        local tags = ""
        if p.MegaNeon then tags .. "[MEGA]" end
        if p.Neon then tags .. "[NEON]" end
        if p.Rideable then tags .. "[RIDE]" end
        if p.Flyable then tags .. "[FLY]" end
        
        table.insert(list, name .. " " .. rarity .. " " .. tags .. " → " .. ageStr)
    end
    table.sort(list)
    for i, v in ipairs(list) do
        print(i .. ". " .. v)
    end
else
    print("Питомцев нет или они ещё грузятся")
end

print("")
print(string.rep("=", 50))
print("ГОТОВО! СДЕЛАЙ СКРИН F9")
