-- ADOPT ME! — ПИТОМЦЫ + БОЛЕЗНИ — РАБОТАЕТ У ВСЕХ (2025)
-- ВСТАВЬ → ЖДИ 5 СЕК → F9 → СКРИНЬ → ГОТОВО

repeat task.wait() until game:IsLoaded()
task.wait(5)

local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")
local mainGui = playerGui:WaitForChild("MainGui")
local dataObject = mainGui:WaitForChild("Data")

if not dataObject or not dataObject.Value then
    warn("Данные ещё не загрузились. Подожди 10 сек и запусти снова.")
    return
end

local data = dataObject.Value

print("\nADOPT ME! — ТВОИ ПИТОМЦЫ И БОЛЕЗНИ")
print(string.rep("=", 55))

-- БОЛЕЗНИ
print("БОЛЕЗНИ:")
if data.ailments_manager and typeof(data.ailments_manager) == "table" and next(data.ailments_manager) then
    for category, ailments in pairs(data.ailments_manager) do
        if typeof(ailments) == "table" then
            for petId, ailment in pairs(ailments) do
                print("  • " .. petId:sub(1,12) .. "... → " .. tostring(ailment))
            end
        end
    end
else
    print("  Нет активных болезней")
end
print("")

-- ПИТОМЦЫ
local pets = data.pet_manager and data.pet_manager.pets 
          or data.pets 
          or data.inventory and data.inventory.pets 
          or {}

local count = 0
for _ in pairs(pets) do count += 1 end

print("ПИТОМЦЕВ: " .. count)
if count == 0 then
    print("  Питомцев нет или они ещё не прогрузились")
else
    local list = {}
    for id, pet in pairs(pets) do
        local p = pet.Properties or pet
        local name = p.Name or "Unknown"
        local rarity = p.Rarity or ""
        local age = p.Age or 0
        local ageStr = age < 6 and "Newborn"
                    or age < 18 and "Junior"
                    or age < 36 and "Pre-Teen"
                    or age < 60 and "Teen"
                    or age < 100 and "Post-Teen"
                    or "Full Grown"
        
        local tags = ""
        if p.MegaNeon then tags = tags .. "[MEGA NEON]" end
        if p.Neon then tags = tags .. "[NEON]" end
        if p.Rideable then tags = tags .. "[RIDE]" end
        if p.Flyable then tags = tags .. "[FLY]" end
        
        table.insert(list, string.format("%s %s %s → %s", name, rarity, tags, ageStr))
    end
    
    table.sort(list)
    for i, line in ipairs(list) do
        print(string.format("%2d. %s", i, line))
    end
end

print("")
print(string.rep("=", 55))
print("ГОТОВО! НАЖМИ F9 → СДЕЛАЙ СКРИН → КИДАЙ МНЕ")
