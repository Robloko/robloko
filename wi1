-- Simple UI Roblox Script using OrionLib for Gingerbread Farm (Winter 2025)
-- Load OrionLib UI Library (stable and working)
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()

local Window = OrionLib:MakeWindow({
    Name = "Gingerbread Farm UI",
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "GingerbreadFarm"
})

local Tab = Window:MakeTab({
    Name = "Ice Skating Farm",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

Tab:AddSection({
    Name = "Winter 2025 Gingerbread Auto Farm"
})

Tab:AddParagraph({
    Title = "Instructions",
    Content = "Go to Mistletroll Village (frozen river/lake). Toggle to auto-TP to all GingerbreadMan parts and fire pickup remote."
})

local Settings = {
    AutoIceSkating = false
}

local Toggle = Tab:AddToggle({
    Name = "Auto Ice Skating Farm",
    Default = false,
    Callback = function(State)
        Settings.AutoIceSkating = State
        spawn(function()
            while Settings.AutoIceSkating do
                pcall(function()
                    -- Fire pickup remote
                    local RS = game:GetService("ReplicatedStorage")
                    local net = RS:WaitForChild("adoptme_new_net"):WaitForChild("adoptme_legacy_shared.ContentPacks.Winter2025.Game.IceSkating.IceSkatingNet:16")
                    net:FireServer()
                    
                    -- TP to all GingerbreadMan parts
                    local Interiors = workspace:WaitForChild("Interiors")
                    local Christmas = Interiors:WaitForChild("MainMap!Christmas")
                    for _, model in pairs(Christmas:GetChildren()) do
                        local gbMan = model:FindFirstChild("GingerbreadMan")
                        if gbMan and gbMan:IsA("BasePart") and game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character:FindFirstChild("HumanoidRootPart") then
                            game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = gbMan.CFrame * CFrame.new(0, 5, 0)
                            wait(1)
                        end
                    end
                end)
                wait(0.1)
            end
        end)
    end
})

OrionLib:Init()
