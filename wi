-- Simple UI Roblox Script using Rayfield Library for Gingerbread Farm
-- Load Rayfield UI Library
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Create the main window
local Window = Rayfield:CreateWindow({
   Name = "Simple Farm UI",
   LoadingTitle = "Gingerbread Farm",
   LoadingSubtitle = "Powered by xAI",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil, -- Create a custom folder in the workspace
      FileName = "GingerbreadConfig"
   },
   Discord = {
      Enabled = false,
      Invite = "", -- Optional Discord invite
      RememberJoins = true
   },
   KeySystem = false, -- Set to true to enable key system
   KeySettings = {
      Title = "Key",
      Subtitle = "Enter Key",
      Note = "No key required",
      FileName = "Key",
      SaveKey = true,
      GrabKeyFromSite = false,
      Key = {"12345"} -- Default key if enabled
   }
})

-- Create a tab
local Tab = Window:CreateTab("Farming", nil) -- Icon can be added if desired

-- Create a section
local Section1 = Tab:CreateSection("Gingerbread Farm")

-- Settings table
local Settings = {
   Start = false
}

-- Create the toggle
local Toggle434 = Section1:CreateToggle("Ginger Bread Farm", Settings.Start, function(State)
   Settings.Start = State
   spawn(function()
      while wait() and Settings.Start do
         pcall(function()
            for i,v in pairs(game.ReplicatedStorage.Resources.IceSkating.GingerbreadMarkers:GetChildren()) do
               if v:IsA("BasePart") then
                  game.ReplicatedStorage.API:FindFirstChild("WinterEventAPI/PickUpGingerbread"):InvokeServer(v.Name)
               end
            end
            game.ReplicatedStorage.API:FindFirstChild("WinterEventAPI/RedeemPendingGingerbread"):FireServer()
         end)
      end
   end)
end)

-- Optional: Add a label for instructions
Section1:CreateLabel("Toggle to start auto-farming gingerbread.")

-- Notify user that the UI is loaded
Rayfield:Notify({
   Title = "UI Loaded",
   Content = "Simple Gingerbread Farm UI is ready!",
   Duration = 5,
   Image = nil,
   Actions = {}
})
