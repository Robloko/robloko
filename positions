-- Print Character + Camera position ONCE (no loops, no teleport)
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local camera = workspace.CurrentCamera

-- Wait a tiny bit for camera to stabilize (optional but helps in Studio)
task.wait(0.1)

-- Get positions
local charPos = humanoidRootPart.Position
local camPos = camera.CFrame.Position

-- Print Character Position
print("CHARACTER POSITION:")
print("Vector3.new("..string.format("%.3f, %.3f, %.3f", charPos.X, charPos.Y, charPos.Z)..")")

-- Print Camera Position
print("\nCAMERA POSITION (where your eyes are):")
print("Vector3.new("..string.format("%.3f, %.3f, %.3f", camPos.X, camPos.Y, camPos.Z)..")")

-- One-liner copy-paste versions
print("\nCOPY-PASTE READY:")
print("Character: Vector3.new("..string.format("%.2f, %.2f, %.2f", charPos.X, charPos.Y, charPos.Z)..")")
print("Camera:     Vector3.new("..string.format("%.2f, %.2f, %.2f", camPos.X, camPos.Y, camPos.Z)..")")
