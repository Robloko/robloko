local Players = game:GetService("Players")
local player = Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
local camera = workspace.CurrentCamera

-- Wait a tiny bit for camera to stabilize (optional but helps in Studio)
task.wait(0.1)

-- Get positions
local charPos = humanoidRootPart.Position
local camPos = camera.CFrame.Position

-- Print Character Position
print("CHARACTER POSITION:")
print("Vector3.new("..tostring(charPos.X)..", "..tostring(charPos.Y)..", "..tostring(charPos.Z)..")")

-- Print Camera Position
print("\nCAMERA POSITION (where your eyes are):")
print("Vector3.new("..tostring(camPos.X)..", "..tostring(camPos.Y)..", "..tostring(camPos.Z)..")")

-- One-liner copy-paste versions
print("\nCOPY-PASTE READY:")
print("Character: Vector3.new("..tostring(charPos.X)..", "..tostring(charPos.Y)..", "..tostring(charPos.Z)..")")
print("Camera:     Vector3.new("..tostring(camPos.X)..", "..tostring(camPos.Y)..", "..tostring(camPos.Z)..")")
