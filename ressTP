--------------------------------------------------------------
-- SAFE SERVICE ACQUISITION
--------------------------------------------------------------
local function safeWaitForChild(parent, childName, timeout)
    timeout = timeout or 10
    local startTime = tick()
    while tick() - startTime < timeout do
        local child = parent:FindFirstChild(childName)
        if child then return child end
        task.wait(0.5)
    end
    return nil
end

local API = safeWaitForChild(ReplicatedStorage, "API")
if not API then warn("API not found!") return end

local ClientDataModule
local core = safeWaitForChild(ReplicatedStorage, "ClientModules")
if core then
    local clientCore = safeWaitForChild(core, "Core")
    if clientCore then
        ClientDataModule = safeWaitForChild(clientCore, "ClientData")
    end
end
if not ClientDataModule then warn("ClientDataModule not found!") return end

local clientData
local success, err = pcall(function() clientData = require(ClientDataModule) end)
if not success then warn("ClientData error: " .. tostring(err)) return end

--------------------------------------------------------------
-- FIND PET RECYCLER FOLDER
--------------------------------------------------------------
local function findPetRecycler()
    local Workspace = game:GetService("Workspace")
    if not Workspace then
        warn("Workspace not found!")
        return nil
    end

    local HouseInteriors = Workspace:FindFirstChild("HouseInteriors")
    if not HouseInteriors then
        warn("HouseInteriors not found!")
        return nil
    end

    local function search(folder)
        for _, child in ipairs(folder:GetChildren()) do
            if child.Name == "PetRecycler" and child:IsA("Folder") then
                return child, child:GetFullName()
            end
            if child:IsA("Folder") then
                local found, path = search(child)
                if found then
                    return found, path
                end
            end
        end
        return nil
    end

    return search(HouseInteriors)
end

