--------------------------------------------------------------
-- VARIABLES & CONFIG
--------------------------------------------------------------
local running = false
local farmThread = nil

-- RELEASE CONDITIONS (SMART PRIORITY SYSTEM)
local RELEASE_CONDITIONS = {
    MIN_PETS = 18, -- Condition 1: 18 allowed basic pets
    MIN_NEONS = 2, -- Condition 2: 2 neon pets (any type, age 6+)
    MIN_MEGA_NEONS = 1, -- NEW: 1 mega neon pet (any age)
}

-- COOLDOWN TIMERS
local COOLDOWNS = {
    REWARD_WAIT = 425, -- 7 minutes 5 seconds (425 seconds)
    AFTER_CLAIM = 30, -- 30 seconds after claim
    RESOURCE_CHECK = 60, -- 60 seconds between condition checks
}

-- STRICTLY ALLOWED PET TYPES
local ALLOWED_PET_NAMES = {
    "basic_egg_2022_camel",
    "basic_egg_2022_poodle",
    "basic_egg_2022_donkey",
    "basic_egg_2022_zebra",
    "basic_egg_2022_orangutan",
    "basic_egg_2022_parakeet",
    "basic_egg_2022_swordfish",
    "basic_egg_2022_robot",
    "basic_egg_2022_corgi",
}

--------------------------------------------------------------
-- FIND PET RECYCLER AND ITS PARENT SLOT
--------------------------------------------------------------
local function findPetRecycler()
    local Workspace = game:GetService("Workspace")
    local HouseInteriors = Workspace:FindFirstChild("HouseInteriors")

    if not HouseInteriors then
        warn("HouseInteriors –Ω–µ –Ω–∞–π–¥–µ–Ω!")
        return nil
    end

    -- –†–µ–∫—É—Ä—Å–∏–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–∏—Å–∫–∞ PetRecycler
    local function search(folder)
        for _, child in ipairs(folder:GetChildren()) do
            if child.Name == "PetRecycler" then
                return child, child:GetFullName()
            end
            if child:IsA("Folder") then
                local found, path = search(child)
                if found then
                    return found, path
                end
            end
        end
        return nil
    end

    -- –ù–∞—á–∏–Ω–∞–µ–º –ø–æ–∏—Å–∫ —Å HouseInteriors
    local petRecycler, path = search(HouseInteriors)
    return petRecycler, path
end

local function findPetRecyclerSlot()
    local petRecycler, path = findPetRecycler()
    if not petRecycler then
        warn("PetRecycler –Ω–µ –Ω–∞–π–¥–µ–Ω!")
        return nil
    end

    -- –ü–æ–¥–Ω–∏–º–∞–µ–º—Å—è –≤–≤–µ—Ä—Ö –ø–æ –∏–µ—Ä–∞—Ä—Ö–∏–∏, —á—Ç–æ–±—ã –Ω–∞–π—Ç–∏ —Å–ª–æ—Ç (–Ω–∞–ø—Ä–∏–º–µ—Ä, "f-39")
    local current = petRecycler
    while current and current.Parent do
        current = current.Parent
        if current.Name:match("^f%-%d+$") then
            print("–ù–∞–π–¥–µ–Ω —Å–ª–æ—Ç PetRecycler:", current.Name)
            return current.Name, petRecycler, current:GetFullName()
        end
    end

    warn("–°–ª–æ—Ç PetRecycler –Ω–µ –Ω–∞–π–¥–µ–Ω!")
    return nil
end

--------------------------------------------------------------
-- PET MANAGEMENT SYSTEM (STRICT FILTERING)
--------------------------------------------------------------
-- üîç Get ALL pets from inventory
local function getAllPets()
    local playerData = clientData.get_data()[player.Name]
    local pets = {}
    if playerData and playerData.inventory and playerData.inventory.pets then
        for uniqueId, petData in pairs(playerData.inventory.pets) do
            if type(petData) == "table" then
                petData.uniqueId = uniqueId
                petData.unique = petData.unique or uniqueId
                table.insert(pets, petData)
            end
        end
    end
    return pets
end

-- üü¢ Get Neon and Mega Neon pets (ANY type)
local function getNeonPets()
    local pets = getAllPets()
    local neons = {}
    local megaNeons = {}
    for _, pet in ipairs(pets) do
        local isNeon = pet.properties and pet.properties.neon
        local isMegaNeon = pet.properties and pet.properties.mega_neon
        local age = pet.properties and pet.properties.age or 0
        if isMegaNeon then
            table.insert(megaNeons, {
                uniqueId = pet.uniqueId,
                age = age,
                id = pet.id,
            })
            print("üåü MEGA NEON Found: " .. pet.id)
        elseif isNeon and age >= 6 then
            table.insert(neons, {
                uniqueId = pet.uniqueId,
                age = age,
                id = pet.id,
            })
            print("üåü Neon 6+ Found: " .. pet.id .. " (Age: " .. age .. ")")
        elseif isNeon then
            print("üí° Young Neon: " .. pet.id .. " (Age: " .. age .. ") - Too young, skipping")
        end
    end
    return neons, megaNeons
end

-- üîç Get ONLY allowed target pets (strict filter)
local function getAllowedTargetPets()
    local pets = getAllPets()
    local allowedPets = {}
    local counts = {}
    -- Initialize counts for allowed pets only
    for _, name in ipairs(ALLOWED_PET_NAMES) do
        counts[name] = 0
    end
    -- Collect ONLY allowed pets
    for _, pet in ipairs(pets) do
        for _, allowedName in ipairs(ALLOWED_PET_NAMES) do
            if pet.id == allowedName then
                table.insert(allowedPets, pet.uniqueId)
                counts[allowedName] = (counts[allowedName] or 0) + 1
                break
            end
        end
    end
    print("üìä Allowed Pets Scan: " .. HttpService:JSONEncode(counts))
    print("üì¶ Total Allowed Pets: " .. #allowedPets)
    return allowedPets, counts
end

-- üé´ Get Tickets (pet_recycler_tickets_2026)
local function getTickets()
    local tickets = 0
    pcall(function()
        local playerData = clientData.get_data()[player.Name]
        if playerData and playerData.inventory and playerData.inventory.items then
            for _, item in pairs(playerData.inventory.items) do
                if item.id == "pet_recycler_tickets_2026" then
                    tickets = item.amount or 0
                    break
                end
            end
        end
    end)
    ticketsLabel.Text = "Tickets: " .. tickets
    print("üé´ Tickets: " .. tickets)
    return tickets
end

-- ü•ö Count Crystal Eggs - FIXED VERSION
local function countCrystalEggs()
    local playerData = clientData.get_data()[player.Name]
    local count = 0
    if playerData and playerData.inventory and playerData.inventory.pets then
        for _, petData in pairs(playerData.inventory.pets) do
            if petData.id and string.lower(petData.id) == "pet_recycler_2025_crystal_egg" then
                count = count + 1
            end
        end
    end
    print("ü•ö CRYSTAL EGGS: " .. count)
    return count
end

--------------------------------------------------------------
-- SMART RELEASE DECISION SYSTEM
--------------------------------------------------------------
local function shouldReleaseNow()
    local allowedPets, counts = getAllowedTargetPets()
    local neonPets, megaNeonPets = getNeonPets()
    local totalAllowedPets = #allowedPets
    local totalNeons = #neonPets
    local totalMegaNeons = #megaNeonPets
    print("ü§î Release Check:")
    print(" Allowed Pets: " .. totalAllowedPets .. "/" .. RELEASE_CONDITIONS.MIN_PETS)
    print(" Neons (6+): " .. totalNeons .. "/" .. RELEASE_CONDITIONS.MIN_NEONS)
    print(" Mega Neons: " .. totalMegaNeons .. "/" .. RELEASE_CONDITIONS.MIN_MEGA_NEONS)
    -- PRIORITY-BASED RELEASE CONDITIONS
    if totalMegaNeons >= RELEASE_CONDITIONS.MIN_MEGA_NEONS then
        print("‚úÖ REASON: Enough mega neons (" .. totalMegaNeons .. ")")
        return true, "mega_neons", allowedPets, neonPets, megaNeonPets
    end
    if totalAllowedPets >= RELEASE_CONDITIONS.MIN_PETS then
        print("‚úÖ REASON: Enough allowed pets (" .. totalAllowedPets .. ")")
        return true, "pets", allowedPets, neonPets, megaNeonPets
    end
    if totalNeons >= RELEASE_CONDITIONS.MIN_NEONS then
        print("‚úÖ REASON: Enough neons (" .. totalNeons .. ")")
        return true, "neons", allowedPets, neonPets, megaNeonPets
    end
    print("‚ùå Not enough resources for release")
    return false, "none", allowedPets, neonPets, megaNeonPets
end

--------------------------------------------------------------
-- UTILITIES
--------------------------------------------------------------
local function log(msg)
    print("[Nursery Farmer] " .. tostring(msg))
end

--------------------------------------------------------------
-- PET RELEASE LOGIC (USING SLOT)
--------------------------------------------------------------
local function executePetRelease(allowedPets, neonPets, megaNeonPets)
    log("üîπ Starting PET release process...")
    local petIds = {}

    -- Priority 1: Mega Neons
    for i, megaNeon in ipairs(megaNeonPets) do
        if i <= RELEASE_CONDITIONS.MIN_MEGA_NEONS then
            table.insert(petIds, megaNeon.uniqueId)
            log("üöÄ Adding MEGA NEON: " .. (megaNeon.id or "Unknown"))
        end
    end

    -- Priority 2: Neons (age 6+)
    for i, neon in ipairs(neonPets) do
        if i <= RELEASE_CONDITIONS.MIN_NEONS and #petIds < 18 then
            table.insert(petIds, neon.uniqueId)
            log("üöÄ Adding Neon: " .. (neon.id or "Unknown") .. " (Age: " .. (neon.age or 0) .. ")")
        end
    end

    -- Priority 3: Allowed Pets
    for i, petId in ipairs(allowedPets) do
        if #petIds < 18 then
            table.insert(petIds, petId)
        else
            break
        end
    end

    if #petIds == 0 then
        log("‚ùå No pets selected for release")
        return false
    end

    -- Create uniques table for API
    local uniques = {}
    for _, petId in ipairs(petIds) do
        uniques[petId] = true
    end

    -- Find PetRecycler slot
    local slotName, petRecycler, fullPath = findPetRecyclerSlot()
    if not slotName then
        log("‚ùå PetRecycler slot not found!")
        return false
    end

    log("üìå Using slot: " .. slotName)

    -- Release pets using the slot
    local args = {
        slotName,
        "UseBlock",
        {
            action = "use",
            uniques = uniques,
        },
        player.Character
    }

    local success, err = pcall(function()
        return ReplicatedStorage:WaitForChild("API"):WaitForChild("HousingAPI/ActivateInteriorFurniture"):InvokeServer(unpack(args))
    end)

    if success then
        log("‚úÖ Released pets via slot: " .. slotName)
        -- Collect tickets after successful release
        local ticketSuccess, ticketErr = pcall(function()
            return ReplicatedStorage:WaitForChild("API"):WaitForChild("PetRecyclerAPI/TicketsCollected"):InvokeServer()
        end)
        if ticketSuccess then
            log("üé´ Tickets collected successfully!")
            getTickets() -- Update UI
        else
            log("‚ö†Ô∏è Failed to collect tickets: " .. tostring(ticketErr))
        end
        return true
    else
        log("‚ùå Failed to release pets: " .. tostring(err))
        return false
    end
end

--------------------------------------------------------------
-- MAIN FARMING CYCLE
--------------------------------------------------------------
local function farmCycle()
    log("Starting farm cycle...")
    getTickets() -- Update tickets UI
    countCrystalEggs()

    -- Check conditions and get pet data
    local shouldRelease, releaseReason, allowedPets, neonPets, megaNeonPets = shouldReleaseNow()
    if not shouldRelease then
        log("‚ùå Not enough resources. Waiting " .. COOLDOWNS.RESOURCE_CHECK .. " seconds...")
        for i = 1, COOLDOWNS.RESOURCE_CHECK do
            if not running then break end
            task.wait(1)
        end
        return
    end

    log("‚úÖ Release conditions met! Reason: " .. releaseReason)

    local releaseSuccess = executePetRelease(allowedPets, neonPets, megaNeonPets)

    if not releaseSuccess then
        log("‚ùå Release process failed")
        return
    end

    -- Wait for cooldown before claiming
    log("‚è≥ Waiting " .. COOLDOWNS.REWARD_WAIT .. " seconds (" .. math.floor(COOLDOWNS.REWARD_WAIT / 60) .. " minutes " .. (COOLDOWNS.REWARD_WAIT % 60) .. " seconds) for rewards cooldown...")
    for i = 1, COOLDOWNS.REWARD_WAIT do
        if not running then break end
        if i % 60 == 0 then
            local minutesLeft = math.floor((COOLDOWNS.REWARD_WAIT - i) / 60)
            local secondsLeft = (COOLDOWNS.REWARD_WAIT - i) % 60
            log(" " .. minutesLeft .. "m " .. secondsLeft .. "s remaining...")
        end
        task.wait(1)
    end

    if not running then return end

    -- Claim Reward
    log("üîπ Claiming Reward...")
    local slotName, petRecycler, fullPath = findPetRecyclerSlot()
    if not slotName then
        log("‚ùå PetRecycler slot not found for claiming!")
        return
    end

    local args = {
        slotName,
        "UseBlock",
        {
            action = "claim",
        },
        player.Character
    }

    local success, err = pcall(function()
        return ReplicatedStorage:WaitForChild("API"):WaitForChild("HousingAPI/ActivateInteriorFurniture"):InvokeServer(unpack(args))
    end)

    if success then
        log("üéâ Successfully claimed reward via slot: " .. slotName)
    else
        log("‚ùå Failed to claim reward: " .. tostring(err))
    end

    -- Count crystal eggs after successful release
    countCrystalEggs()
    getTickets() -- Update tickets UI

    -- Wait before next cycle check
    log("‚è≥ Waiting " .. COOLDOWNS.AFTER_CLAIM .. " seconds before next resource check...")
    for i = 1, COOLDOWNS.AFTER_CLAIM do
        if not running then break end
        task.wait(1)
    end

    return true
end

--------------------------------------------------------------
-- CONTROL SYSTEM
--------------------------------------------------------------
local function toggleFarm()
    running = not running
    if running then
        btn.Text = "‚èπÔ∏è"
        btn.TextColor3 = Color3.fromRGB(255, 0, 0)
        stroke.Color = Color3.fromRGB(255, 0, 0)
        status.Text = "RUNNING..."
        status.TextColor3 = Color3.fromRGB(0, 255, 0)
        log("Strict Filter Farmer started! Waiting for conditions...")
        farmThread = task.spawn(function()
            while running do
                local cycleSuccess = pcall(farmCycle)
                if not cycleSuccess then
                    log("Error in farm cycle")
                end
                -- Only check every 60 seconds if no release happened
                if running then
                    log("‚è≥ Waiting " .. COOLDOWNS.RESOURCE_CHECK .. " seconds before next condition check...")
                    for i = 1, COOLDOWNS.RESOURCE_CHECK do
                        if not running then break end
                        task.wait(1)
                    end
                end
            end
        end)
        pcall(function()
            TweenService:Create(btn, TweenInfo.new(0.6, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true), {
                Size = UDim2.new(0, 100, 0, 100)
            }):Play()
        end)
    else
        btn.Text = "‚ôªÔ∏è"
        btn.TextColor3 = Color3.fromRGB(0, 255, 0)
        stroke.Color = Color3.fromRGB(0, 255, 0)
        status.Text = "OFF"
        status.TextColor3 = Color3.fromRGB(255, 0, 0)
        if farmThread then task.cancel(farmThread) end
        pcall(function() btn.Size = UDim2.new(0, 90, 0, 90) end)
        log("Farmer stopped")
    end
end

btn.MouseButton1Click:Connect(function() pcall(toggleFarm) end)
player:GetMouse().KeyDown:Connect(function(key) if key:lower() == "r" then pcall(toggleFarm) end end)

log("PROPER COOLDOWN Farmer Loaded! Press Recycle or R")
log("‚úÖ ALLOWED: 18 specific pets + ANY neon (age 6+) + 1 MEGA NEON (any age)")
log("‚è∞ COOLDOWNS: 7m5s reward wait + 30s after claim + 60s resource checks")
