local function testAilmentsAPI()
    print("=== TESTING AilmentsAPI/BabyAilmentCompleted ===")
    
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local api = ReplicatedStorage.API:FindFirstChild("AilmentsAPI/BabyAilmentCompleted")
    
    if not api then
        print("❌ API not found!")
        return
    end
    
    print("✅ API found! Testing with different parameters...")
    
    -- Test values to try
    local testValues = {
        "hungry", "thirsty", "sleepy", "dirty", "bored",
        "sick", "school", "camping", "hot_spring", "salon"
    }
    
    for _, ailment in ipairs(testValues) do
        print("Testing: " .. ailment)
        
        -- Try different parameter combinations
        local attempts = {
            {ailment},
            {ailment, 1},
            {ailment, true},
            {ailment, game.Players.LocalPlayer.Name}
        }
        
        for i, params in ipairs(attempts) do
            local success, err = pcall(function()
                api:FireServer(unpack(params))
            end)
            
            if success then
                print("✅ SUCCESS with params: " .. table.concat(params, ", "))
                break
            else
                print("❌ FAILED attempt " .. i .. ": " .. tostring(err))
            end
            
            task.wait(0.1)
        end
        
        print("---")
        task.wait(0.2)
    end
end

-- Run the test
testAilmentsAPI()
