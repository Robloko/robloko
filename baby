-- Services
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Player
local player = Players.LocalPlayer

-- Function to safely get player data
local function getPlayerData()
    local clientModules = ReplicatedStorage:WaitForChild("ClientModules", 10)
    if not clientModules then
        warn("ClientModules not found in ReplicatedStorage!")
        return nil
    end

    local coreModule = clientModules:WaitForChild("Core", 5)
    if not coreModule then
        warn("Core module not found in ClientModules!")
        return nil
    end

    local clientDataModule = coreModule:WaitForChild("ClientData", 5)
    if not clientDataModule then
        warn("ClientData module not found in Core!")
        return nil
    end

    local clientData
    local success, err = pcall(function()
        clientData = require(clientDataModule)
    end)

    if not success or not clientData then
        warn("Failed to load ClientData: " .. tostring(err))
        return nil
    end

    local playerData
    success, err = pcall(function()
        playerData = clientData.get_data()[player.Name]
    end)

    if not success or not playerData then
        warn("Failed to get player data: " .. tostring(err))
        return nil
    end

    return playerData
end

-- Function to print available baby ailments
local function printAvailableBabyAilments()
    print("üîç AVAILABLE BABY AILMENTS")
    print("=========================")

    local playerData = getPlayerData()
    if not playerData then
        print("‚ùå Failed to get player data")
        return
    end

    if not playerData.ailments_manager or not playerData.ailments_manager.baby_ailments then
        print("‚ùå No baby ailments found")
        return
    end

    local babyAilments = playerData.ailments_manager.baby_ailments
    local count = 0

    for petUniqueID, ailment in pairs(babyAilments) do
        count = count + 1
        print(string.format("%d. Pet Unique ID: %s", count, petUniqueID))
        print(string.format("   Ailment: %s", tostring(ailment)))
        print("   ---")
    end

    if count == 0 then
        print("No baby ailments found")
    else
        print(string.format("Total baby ailments: %d", count))
    end
end

-- Run the function
printAvailableBabyAilments()
