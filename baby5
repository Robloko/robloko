local function safeBruteForceAPIs()
    print("=== SAFE BRUTE FORCE DEBUG ===")
    
    local ReplicatedStorage = game:GetService("ReplicatedStorage")
    local apiFolder = ReplicatedStorage.API
    
    -- APIs that might cause rejoin/kick - SKIP THESE
    local dangerousAPIs = {
        "RejoinAPI", "KickAPI", "BanAPI", "TeleportAPI", 
        "ServerHopAPI", "ResetAPI", "ShutdownAPI"
    }
    
    local testValues = {"hungry", "thirsty", "sleepy", "dirty", "Feed", "Drink", "Sleep", "Clean"}
    
    for _, api in ipairs(apiFolder:GetChildren()) do
        -- Skip dangerous APIs
        local skipApi = false
        for _, dangerousName in ipairs(dangerousAPIs) do
            if string.find(api.Name:lower(), dangerousName:lower()) then
                print("üö´ SKIPPING DANGEROUS API: " .. api.Name)
                skipApi = true
                break
            end
        end
        
        if skipApi then
            continue
        end
        
        print("üîç Testing API: " .. api.Name)
        
        -- Test with 1 parameter
        for _, v1 in ipairs(testValues) do
            print("   Trying: " .. api.Name .. "('" .. tostring(v1) .. "')")
            
            local success, err = pcall(function()
                api:FireServer(v1)
            end)
            
            if success then
                print("   ‚úÖ SUCCESS: " .. api.Name .. "('" .. tostring(v1) .. "')")
            else
                print("   ‚ùå FAILED: " .. tostring(err))
            end
            
            task.wait(0.1) -- Small delay between calls
        end
        
        -- Test with 2 parameters
        for _, v1 in ipairs(testValues) do
            print("   Trying: " .. api.Name .. "('" .. tostring(v1) .. "', 1)")
            
            local success, err = pcall(function()
                api:FireServer(v1, 1)
            end)
            
            if success then
                print("   ‚úÖ SUCCESS: " .. api.Name .. "('" .. tostring(v1) .. "', 1)")
            else
                print("   ‚ùå FAILED: " .. tostring(err))
            end
            
            task.wait(0.1)
        end
        
        print("--- Waiting 1 second before next API ---")
        task.wait(1)
    end
    
    print("=== BRUTE FORCE COMPLETE ===")
end

safeBruteForceAPIs()
