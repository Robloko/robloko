-- ULTRA-DETAILED INSPECT: idle_progression_manager (100% working – tested Nov 06, 2025)
local function inspectIdleProgressionManager()
    print("INSPECTING idle_progression_manager – FULL DEEP DIVE")
    print("======================================================")

    local clientData = require(ReplicatedStorage.ClientModules.Core.ClientData)
    local data = clientData.get_data()[player.Name]

    local idleMgr = data.idle_progression_manager
    if not idleMgr then
        return print("idle_progression_manager NOT FOUND in player data!")
    end

    print("idle_progression_manager FOUND! Type:", type(idleMgr))
    print("Raw keys ("..#idleMgr.."):")
    
    for k, v in pairs(idleMgr) do
        local t = type(v)
        if t == "table" then
            local subCount = 0
            for _ in pairs(v) do subCount += 1 end
            print(string.format("  [%s] → table (%d items)", tostring(k), subCount))
        else
            print(string.format("  [%s] → %s = %s", tostring(k), t, tostring(v)))
        end
    end

    print("\nDEEP DIVE INTO PET PEN DATA:")
    local pen = idleMgr.pet_pen
    if pen then
        print("pet_pen found! Slots used:", #pen)
        for i, pet in ipairs(pen) do
            print(string.format("  Slot %d:", i))
            for key, val in pairs(pet) do
                if key == "pet_data" then
                    local pd = val
                    print(string.format("     pet_data → id: %s | age: %d | unique: %s", 
                        pd.id or "nil", pd.age or 0, tostring(pd.unique):sub(1,12)))
                else
                    print("     " .. key .. " = " .. tostring(val))
                end
            end
        end
    else
        print("pet_pen table MISSING!")
    end

    print("\nOTHER IMPORTANT FIELDS:")
    local fields = {
        "last_claim_time",
        "total_idle_seconds",
        "current_pet_unique",
        "neon_fusion_ready",
        "pending_rewards"
    }
    for _, field in ipairs(fields) do
        local val = idleMgr[field]
        if val ~= nil then
            print(string.format("  %s → %s", field, tostring(val)))
        end
    end

    print("\n=== INSPECTION COMPLETE ===")
end

-- RUN IT NOW
inspectIdleProgressionManager()
