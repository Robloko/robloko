-- Services
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Player
local player = Players.LocalPlayer

-- Function to print all available pets in inventory
local function printAvailablePets()
    local pets = {}
    local success, errorMsg = pcall(function()
        local clientData = require(ReplicatedStorage.ClientModules.Core.ClientData)
        local playerData = clientData.get_data()[player.Name]
        if playerData and playerData.inventory and playerData.inventory.pets then
            for petId, petData in pairs(playerData.inventory.pets) do
                if petData.id then
                    table.insert(pets, {
                        id = petId,
                        name = petData.id,
                        unique = petData.unique,
                        properties = petData.properties or {}
                    })
                end
            end
        end
    end)
    
    if not success then
        print("Error reading inventory: " .. tostring(errorMsg))
        return
    end
    
    if #pets == 0 then
        print("No pets found in inventory!")
        return
    end
    
    print("=== AVAILABLE PETS IN INVENTORY ===")
    for i, pet in ipairs(pets) do
        local age = pet.properties.age or 0
        local isNeon = pet.properties.neon and "âœ¨ NEON" or ""
        local isMegaNeon = pet.properties.mega_neon and "ðŸŒŸ MEGA NEON" or ""
        local neonStatus = isMegaNeon ~= "" and isMegaNeon or isNeon
        
        print(string.format("%d. %s (Unique: %s)", i, pet.name, pet.unique))
        print(string.format("   Age: %d years | %s", age, neonStatus))
        
        -- Print all properties for debugging
        print("   Properties:")
        for propKey, propValue in pairs(pet.properties) do
            print(string.format("     %s: %s", propKey, tostring(propValue)))
        end
        print("   ---")
    end
    print("Total pets: " .. #pets)
    print("===================================")
end

-- Run the function
printAvailablePets()
