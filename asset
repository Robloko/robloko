local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local button = Instance.new("ImageButton")
button.Size = UDim2.new(0, 80, 0, 80)
button.Position = UDim2.new(0.5, -40, 0.5, -40)
button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
button.Parent = screenGui

-- Try multiple image sources
local function setImage()
    -- Method 1: Try asset thumbnail (might work)
    button.Image = "https://www.roblox.com/asset-thumbnail/image?assetId=3187344934&width=150&height=150&format=png"
    
    -- If that doesn't work, use a placeholder
    task.wait(2) -- Wait to see if image loads
    if button.Image == "" then
        -- Method 2: Use Roblox placeholder icon
        button.Image = "rbxasset://textures/ui/LuaChat/icons/ic-profile.png"
        
        -- Add text label as fallback
        local label = Instance.new("TextLabel")
        label.Size = UDim2.new(1, 0, 0, 20)
        label.Position = UDim2.new(0, 0, 1, 5)
        label.BackgroundTransparency = 1
        label.Text = "Egg Hacker"
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        label.TextSize = 14
        label.Parent = button
    end
end

setImage()

-- Add rounded corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = button

-- Click function
button.MouseButton1Click:Connect(function()
    print("Egg Hacker icon clicked!")
    game:GetService("MarketplaceService"):PromptProductPurchase(game.Players.LocalPlayer, 3187344934)
end)

print("Test icon created - if no image appears, it's using fallback text")
