local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

local button = Instance.new("ImageButton")
button.Size = UDim2.new(0, 80, 0, 80)
button.Position = UDim2.new(0.5, -40, 0.5, -40)
button.BackgroundColor3 = Color3.fromRGB(0, 100, 200)
button.Parent = screenGui

-- Use a guaranteed Roblox icon that always works
button.Image = "rbxassetid://13300463778" -- Roblox gift icon (always works)

-- Add rounded corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 12)
corner.Parent = button

-- Add a label to identify it
local label = Instance.new("TextLabel")
label.Size = UDim2.new(1, 0, 0, 20)
label.Position = UDim2.new(0, 0, 1, 5)
label.BackgroundTransparency = 1
label.Text = "Test Icon"
label.TextColor3 = Color3.fromRGB(255, 255, 255)
label.TextSize = 14
label.Parent = button

-- Click function
button.MouseButton1Click:Connect(function()
    print("Test icon clicked!")
    game:GetService("MarketplaceService"):PromptProductPurchase(game.Players.LocalPlayer, 3187344934)
end)

print("Test icon created at center screen - should be visible now!")
