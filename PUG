-- Replace "YOUR_BAIT_ID_HERE" with the actual ID from step 1
local baitId = "2_8960019fe5ac437982d56ab8c54698e3"

-- Equip
local args = {baitId, {use_sound_delay = false, equip_as_last = false}}
game:GetService("ReplicatedStorage"):WaitForChild("API"):WaitForChild("ToolAPI/Equip"):InvokeServer(unpack(args))
wait(0.5)

-- Focus pet
local args = {workspace:WaitForChild("Pets"):WaitForChild("Dog")}
game:GetService("ReplicatedStorage"):WaitForChild("API"):WaitForChild("AdoptAPI/FocusPet"):FireServer(unpack(args))
wait(1)

-- Start use
local args = {baitId, "START"}
game:GetService("ReplicatedStorage"):WaitForChild("API"):WaitForChild("ToolAPI/ServerUseTool"):FireServer(unpack(args))
wait(2)

-- End use
local args = {baitId, "END"}
game:GetService("ReplicatedStorage"):WaitForChild("API"):WaitForChild("ToolAPI/ServerUseTool"):FireServer(unpack(args))
wait(0.5)

-- Unfocus
local args = {workspace:WaitForChild("Pets"):WaitForChild("Dog")}
game:GetService("ReplicatedStorage"):WaitForChild("API"):WaitForChild("AdoptAPI/UnfocusPet"):FireServer(unpack(args))
wait(0.5)

-- Progress
local args = {false}
game:GetService("ReplicatedStorage"):WaitForChild("API"):WaitForChild("WinterEventAPI/ProgressTaming"):InvokeServer(unpack(args))

print("Taming complete!")
