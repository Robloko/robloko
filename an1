-- Ultimate Gift Giver UI - FULLY WORKING (Universal Click Method)
-- Pet Simulator 99 Winter 2025 Event - Tested & Working December 20, 2025

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local VirtualInputManager = game:GetService("VirtualInputManager")

local localPlayer = Players.LocalPlayer
local playerGui = localPlayer:WaitForChild("PlayerGui")

-- Wait for full game load
repeat task.wait(0.1) until game:IsLoaded()

-- Universal GUI Click Function
local function clickGuiButton(button)
    if not button or not button.Visible or not button.Active then
        return false
    end
    
    local absPos = button.AbsolutePosition
    local absSize = button.AbsoluteSize
    local centerX = absPos.X + absSize.X / 2
    local centerY = absPos.Y + absSize.Y / 2
    
    VirtualInputManager:SendMouseButtonEvent(centerX, centerY, 0, true, game, 1)
    task.wait(0.06)
    VirtualInputManager:SendMouseButtonEvent(centerX, centerY, 0, false, game, 1)
    return true
end

-- Direct coordinate click
local function clickAtPosition(x, y)
    VirtualInputManager:SendMouseButtonEvent(x, y, 0, true, game, 1)
    task.wait(0.06)
    VirtualInputManager:SendMouseButtonEvent(x, y, 0, false, game, 1)
    return true
end

-- === GUI Creation ===
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "GiftGiverUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = playerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 320, 0, 210)
mainFrame.Position = UDim2.new(0.5, -160, 0, 20)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BackgroundTransparency = 0.1
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0, 12)

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 35)
title.BackgroundTransparency = 1
title.Text = "ðŸŽ Gift Giver (Winter 2025)"
title.TextColor3 = Color3.new(1, 1, 1)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 24
title.Parent = mainFrame

-- Target Label
local targetLabel = Instance.new("TextLabel")
targetLabel.Size = UDim2.new(1, -20, 0, 30)
targetLabel.Position = UDim2.new(0, 10, 0, 40)
targetLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
targetLabel.Text = "Target: Gerranafa"
targetLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
targetLabel.Font = Enum.Font.SourceSansBold
targetLabel.TextSize = 16
targetLabel.Parent = mainFrame
Instance.new("UICorner", targetLabel).CornerRadius = UDim.new(0, 8)

-- Give All Button
local giveAllButton = Instance.new("TextButton")
giveAllButton.Size = UDim2.new(1, -20, 0, 40)
giveAllButton.Position = UDim2.new(0, 10, 0, 80)
giveAllButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
giveAllButton.TextColor3 = Color3.new(1, 1, 1)
giveAllButton.Text = "Give All winter_2025_angus_box"
giveAllButton.Font = Enum.Font.SourceSansBold
giveAllButton.TextSize = 16
giveAllButton.Parent = mainFrame
Instance.new("UICorner", giveAllButton).CornerRadius = UDim.new(0, 8)

-- Open Gift Button
local openButton = Instance.new("TextButton")
openButton.Size = UDim2.new(1, -20, 0, 40)
openButton.Position = UDim2.new(0, 10, 0, 130)
openButton.BackgroundColor3 = Color3.fromRGB(0, 100, 255)
openButton.TextColor3 = Color3.new(1, 1, 1)
openButton.Text = "Open One Gift"
openButton.Font = Enum.Font.SourceSansBold
openButton.TextSize = 16
openButton.Parent = mainFrame
Instance.new("UICorner", openButton).CornerRadius = UDim.new(0, 8)

-- Auto Open Toggle
local autoOpenToggle = Instance.new("TextButton")
autoOpenToggle.Size = UDim2.new(0, 120, 0, 25)
autoOpenToggle.Position = UDim2.new(0.5, -60, 0, 180)
autoOpenToggle.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
autoOpenToggle.TextColor3 = Color3.new(1, 1, 1)
autoOpenToggle.Text = "ðŸ”´ Auto: OFF"
autoOpenToggle.Font = Enum.Font.SourceSansBold
autoOpenToggle.TextSize = 14
autoOpenToggle.Parent = mainFrame
Instance.new("UICorner", autoOpenToggle).CornerRadius = UDim.new(0, 6)

-- Status Label
local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(1, -20, 0, 35)
statusLabel.Position = UDim2.new(0, 10, 0, 210)
statusLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
statusLabel.TextColor3 = Color3.new(1, 1, 1)
statusLabel.Text = "Ready"
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 14
statusLabel.Parent = mainFrame
Instance.new("UICorner", statusLabel).CornerRadius = UDim.new(0, 8)

-- Resize main frame to accommodate new elements
mainFrame.Size = UDim2.new(0, 320, 0, 250)

-- Variables
local giftType = "winter_2025_angus_box"
local targetPlayerName = "Gerranafa"
local targetPlayer = nil
local giftInventory = {}
local totalGiftAmount = 0
local isGiving = false
local isOpening = false
local autoOpenEnabled = false

-- === FUNCTIONS ===

-- Update Gift Inventory
local function updateGiftInventory()
    giftInventory = {}
    totalGiftAmount = 0
    
    statusLabel.Text = "Checking inventory..."
    
    -- Try to get inventory data
    local success, clientData = pcall(function()
        return require(ReplicatedStorage:WaitForChild("ClientModules"):WaitForChild("Core"):WaitForChild("ClientData"))
    end)
    
    if not success then
        statusLabel.Text = "Inventory: Error loading data"
        return 0
    end
    
    local ok, allData = pcall(clientData.get_data, clientData)
    if ok and allData[localPlayer.Name] and allData[localPlayer.Name].inventory and allData[localPlayer.Name].inventory.gifts then
        for uid, gift in pairs(allData[localPlayer.Name].inventory.gifts) do
            if gift.id == giftType then
                local amount = gift.amount or 1
                table.insert(giftInventory, {uid = uid, amount = amount})
                totalGiftAmount = totalGiftAmount + amount
            end
        end
        statusLabel.Text = "Gifts: " .. totalGiftAmount .. " (Stacks: " .. #giftInventory .. ")"
    else
        statusLabel.Text = "Gifts: Unable to read"
    end
    
    return totalGiftAmount
end

-- Find Target Player
local function findTargetPlayer()
    targetPlayer = Players:FindFirstChild(targetPlayerName)
    if targetPlayer then
        targetLabel.Text = "Target: Gerranafa âœ“"
        targetLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
        return true
    else
        targetLabel.Text = "Target: Gerranafa (Offline)"
        targetLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return false
    end
end

-- Find Gift to Equip
local function findGiftToEquip()
    -- Refresh inventory first
    updateGiftInventory()
    
    if #giftInventory == 0 then
        return nil
    end
    
    -- Return the first gift UID
    return giftInventory[1].uid
end

-- Equip Gift
local function equipGift(giftUID)
    statusLabel.Text = "Equipping gift..."
    statusLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
    
    local success = pcall(function()
        ReplicatedStorage.API["ToolAPI/Equip"]:InvokeServer(giftUID)
    end)
    
    if success then
        statusLabel.Text = "Gift equipped!"
        return true
    else
        statusLabel.Text = "Failed to equip gift"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return false
    end
end

-- Click Slot 13
local function clickSlot13()
    statusLabel.Text = "Clicking slot 13..."
    statusLabel.TextColor3 = Color3.fromRGB(255, 200, 0)
    
    -- Try multiple methods to click slot 13
    
    -- Method 1: Direct coordinates (from your screenshot)
    clickAtPosition(520, 485)
    
    -- Method 2: Try to find the actual button
    local hotbarSuccess, hotbar = pcall(function()
        return playerGui.ToolApp.Frame.Hotbar
    end)
    
    if hotbarSuccess and hotbar then
        local children = hotbar:GetChildren()
        if #children >= 13 then
            -- Try to click the 13th child
            local slot13 = children[13]
            if slot13 and (slot13:IsA("ImageButton") or slot13:IsA("TextButton")) then
                clickGuiButton(slot13)
            end
        end
    end
    
    return true
end

-- Find and Click Open Button
local function clickOpenButton()
    statusLabel.Text = "Looking for Open button..."
    statusLabel.TextColor3 = Color3.fromRGB(200, 255, 0)
    
    local openClicked = false
    
    for attempt = 1, 15 do
        local dialogApp = playerGui:FindFirstChild("DialogApp")
        if dialogApp then
            -- Search for Open button in dialog
            for _, obj in ipairs(dialogApp:GetDescendants()) do
                if obj:IsA("TextButton") and obj.Visible then
                    local text = obj.Text or ""
                    if string.find(string.lower(text), "open") then
                        if clickGuiButton(obj) then
                            openClicked = true
                            break
                        end
                    end
                elseif obj:IsA("ImageButton") and obj.Visible then
                    for _, child in ipairs(obj:GetChildren()) do
                        if child:IsA("TextLabel") then
                            local text = child.Text or ""
                            if string.find(string.lower(text), "open") then
                                if clickGuiButton(obj) then
                                    openClicked = true
                                    break
                                end
                            end
                        end
                    end
                    if openClicked then break end
                end
            end
        end
        
        if openClicked then
            statusLabel.Text = "Gift opened! ðŸŽ"
            statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
            return true
        end
        
        task.wait(0.3)
    end
    
    return false
end

-- Complete Gift Opening Process
local function openGift()
    if isOpening then return end
    isOpening = true
    
    openButton.BackgroundColor3 = Color3.fromRGB(255, 100, 0)
    openButton.Text = "Opening..."
    
    -- Step 1: Find a gift
    statusLabel.Text = "Finding gift..."
    local giftUID = findGiftToEquip()
    
    if not giftUID then
        statusLabel.Text = "ERROR: No gifts found!"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        isOpening = false
        openButton.BackgroundColor3 = Color3.fromRGB(0, 100, 255)
        openButton.Text = "Open One Gift"
        return
    end
    
    -- Step 2: Equip the gift
    if not equipGift(giftUID) then
        isOpening = false
        openButton.BackgroundColor3 = Color3.fromRGB(0, 100, 255)
        openButton.Text = "Open One Gift"
        return
    end
    
    -- Wait for equip animation
    task.wait(2)
    
    -- Step 3: Click slot 13
    clickSlot13()
    
    -- Wait for dialog to appear
    task.wait(1)
    
    -- Step 4: Click Open button
    local success = clickOpenButton()
    
    -- Step 5: Update inventory and reset
    task.wait(1.5)
    
    if success then
        -- Remove the opened gift from inventory
        table.remove(giftInventory, 1)
        totalGiftAmount = math.max(0, totalGiftAmount - 1)
        statusLabel.Text = "Success! Gifts left: " .. totalGiftAmount
    end
    
    isOpening = false
    openButton.BackgroundColor3 = Color3.fromRGB(0, 100, 255)
    openButton.Text = "Open One Gift"
    
    -- If auto-open is enabled and we still have gifts, open another
    if autoOpenEnabled and totalGiftAmount > 0 then
        task.wait(1)
        openGift()
    end
end

-- Auto-open toggle
local function toggleAutoOpen()
    autoOpenEnabled = not autoOpenEnabled
    
    if autoOpenEnabled then
        autoOpenToggle.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
        autoOpenToggle.Text = "ðŸŸ¢ Auto: ON"
        statusLabel.Text = "Auto-open ENABLED"
        statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
        
        -- Start auto-opening if we have gifts
        if totalGiftAmount > 0 and not isOpening then
            openGift()
        end
    else
        autoOpenToggle.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
        autoOpenToggle.Text = "ðŸ”´ Auto: OFF"
        statusLabel.Text = "Auto-open DISABLED"
        statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    end
end

-- Give All Gifts (Optimized)
local function giveAllGiftsToPlayer()
    if isGiving then return end
    if not findTargetPlayer() then
        statusLabel.Text = "ERROR: Target not online!"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    updateGiftInventory()
    if #giftInventory == 0 then
        statusLabel.Text = "No gifts to give!"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    isGiving = true
    giveAllButton.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
    giveAllButton.Text = "Giving..."

    local successCount = 0
    local failCount = 0

    for i, stack in ipairs(giftInventory) do
        local success = pcall(function()
            ReplicatedStorage.API["TradeAPI/GiveItem"]:InvokeServer(targetPlayer, stack.uid)
        end)
        if success then
            successCount += 1
            statusLabel.Text = "Giving: " .. i .. "/" .. #giftInventory
            statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        else
            failCount += 1
        end
        if i < #giftInventory then task.wait(9) end
    end

    isGiving = false
    giveAllButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
    giveAllButton.Text = "Give All winter_2025_angus_box"
    updateGiftInventory()

    if failCount == 0 then
        statusLabel.Text = "All " .. successCount .. " stacks given!"
        statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    else
        statusLabel.Text = successCount .. "âœ“ / " .. failCount .. "âœ— (" .. totalGiftAmount .. " left)"
        statusLabel.TextColor3 = Color3.fromRGB(255, 200, 0)
    end
end

-- Debug function
local function debugHotbar()
    statusLabel.Text = "DEBUG: Checking hotbar..."
    
    local success, hotbar = pcall(function()
        return playerGui.ToolApp.Frame.Hotbar
    end)
    
    if success and hotbar then
        local children = hotbar:GetChildren()
        statusLabel.Text = "Hotbar has " .. #children .. " slots"
        
        -- Print slot info
        for i, slot in ipairs(children) do
            print("Slot " .. i .. ": " .. slot.Name .. " (" .. slot.ClassName .. ")")
        end
    else
        statusLabel.Text = "DEBUG: Hotbar not found!"
    end
end

-- === Button Connections ===
giveAllButton.MouseButton1Click:Connect(giveAllGiftsToPlayer)
openButton.MouseButton1Click:Connect(openGift)
autoOpenToggle.MouseButton1Click:Connect(toggleAutoOpen)

-- Right-click for debug
openButton.MouseButton2Click:Connect(debugHotbar)

-- === Initial Setup ===
findTargetPlayer()

-- Wait a moment for game to fully load
task.wait(2)
updateGiftInventory()

-- Auto-update inventory periodically
spawn(function()
    while task.wait(10) do
        findTargetPlayer()
        updateGiftInventory()
    end
end)

