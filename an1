-- Quick test script to find button positions
local function createCoordinateHelper()
    local helperGui = Instance.new("ScreenGui")
    helperGui.Name = "CoordinateHelper"
    helperGui.Parent = playerGui
    
    -- Create a draggable frame
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 50, 0, 50)
    frame.Position = UDim2.new(0.5, -25, 0.5, -25)
    frame.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
    frame.BackgroundTransparency = 0.3
    frame.Parent = helperGui
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(2, 0, 1, 0)
    label.Position = UDim2.new(1, 5, 0, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Text = "Drag me to button\nRight-click to save pos"
    label.Font = Enum.Font.SourceSans
    label.TextSize = 12
    label.Parent = frame
    
    -- Make draggable
    local dragging = false
    local dragInput
    local dragStart
    local startPos
    
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        elseif input.UserInputType == Enum.UserInputType.MouseButton2 then
            -- Right-click to save position
            local absolutePos = frame.AbsolutePosition
            local absoluteSize = frame.AbsoluteSize
            local centerX = absolutePos.X + (absoluteSize.X / 2)
            local centerY = absolutePos.Y + (absoluteSize.Y / 2)
            
            print("=== SAVED POSITION ===")
            print("Center: " .. centerX .. ", " .. centerY)
            print("Vector2.new(" .. centerX .. ", " .. centerY .. ")")
            print("=== END ===")
            
            -- Flash green to confirm
            frame.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
            task.wait(0.3)
            frame.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
        end
    end)
    
    frame.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if dragging and input == dragInput then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(
                startPos.X.Scale, 
                startPos.X.Offset + delta.X,
                startPos.Y.Scale, 
                startPos.Y.Offset + delta.Y
            )
            
            -- Update label with coordinates
            local absolutePos = frame.AbsolutePosition
            label.Text = string.format("X: %d\nY: %d", 
                absolutePos.X, 
                absolutePos.Y
            )
        end
    end)
end

-- Run this once to create the helper
createCoordinateHelper()
