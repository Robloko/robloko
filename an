-- Status Label
local statusLabel = Instance.new("TextLabel")
statusLabel.Size = UDim2.new(1, -20, 0, 35)
statusLabel.Position = UDim2.new(0, 10, 0, 175)
statusLabel.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
statusLabel.TextColor3 = Color3.new(1, 1, 1)
statusLabel.Text = "Ready"
statusLabel.Font = Enum.Font.SourceSansBold
statusLabel.TextSize = 14
statusLabel.Parent = mainFrame
Instance.new("UICorner", statusLabel).CornerRadius = UDim.new(0, 8)

-- Variables
local giftType = "winter_2025_angus_box"
local targetPlayerName = "Gerranafa"
local targetPlayer = nil
local giftInventory = {}
local totalGiftAmount = 0
local isGiving = false
local isOpening = false

-- === FUNCTIONS ===

-- Update Gift Inventory
local function updateGiftInventory()
    giftInventory = {}
    totalGiftAmount = 0
    
    -- Simple inventory check without ClientData
    statusLabel.Text = "Checking inventory..."
    
    -- We'll update this properly after opening
    statusLabel.Text = "Gifts: Checking..."
    return 0
end

-- Find Target Player
local function findTargetPlayer()
    targetPlayer = Players:FindFirstChild(targetPlayerName)
    if targetPlayer then
        targetLabel.Text = "Target: Gerranafa ‚úì"
        targetLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
        return true
    else
        targetLabel.Text = "Target: Gerranafa (Offline)"
        targetLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return false
    end
end

-- Give All Gifts
local function giveAllGiftsToPlayer()
    if isGiving then return end
    if not findTargetPlayer() then
        statusLabel.Text = "ERROR: Target not online!"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    updateGiftInventory()
    if totalGiftAmount == 0 then
        statusLabel.Text = "No gifts to give!"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        return
    end

    isGiving = true
    giveAllButton.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
    giveAllButton.Text = "Giving..."

    local successCount = 0
    local failCount = 0

    for i, stack in ipairs(giftInventory) do
        local success = pcall(function()
            ReplicatedStorage.API["TradeAPI/GiveItem"]:InvokeServer(targetPlayer, stack.uid)
        end)
        if success then
            successCount += 1
            statusLabel.Text = "Giving: " .. i .. "/" .. #giftInventory
            statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        else
            failCount += 1
        end
        if i < #giftInventory then task.wait(9) end
    end

    isGiving = false
    giveAllButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
    giveAllButton.Text = "Give All winter_2025_angus_box"
    updateGiftInventory()

    if failCount == 0 then
        statusLabel.Text = "All " .. successCount .. " stacks given!"
        statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
    else
        statusLabel.Text = successCount .. "‚úì / " .. failCount .. "‚úó (" .. totalGiftAmount .. " left)"
        statusLabel.TextColor3 = Color3.fromRGB(255, 200, 0)
    end
end

-- SIMPLE WORKING VERSION: Just click slot 13
local function openGift()
    if isOpening then return end
    isOpening = true
    openButton.BackgroundColor3 = Color3.fromRGB(255, 100, 0)
    openButton.Text = "Opening..."
    
    statusLabel.Text = "Step 1: Finding gift..."
    statusLabel.TextColor3 = Color3.fromRGB(255, 255, 0)
    
    -- Step 1: Try to get a gift from inventory
    local foundGift = false
    local giftUID = nil
    
    -- First, try to find any gift in the hotbar already
    statusLabel.Text = "Checking hotbar for gifts..."
    
    local hotbarSuccess, hotbar = pcall(function()
        return playerGui.ToolApp.Frame.Hotbar
    end)
    
    if hotbarSuccess and hotbar then
        -- Look for any gift in hotbar slots
        for _, slot in ipairs(hotbar:GetChildren()) do
            if slot:IsA("ImageButton") or slot:IsA("TextButton") then
                -- Check if slot has an image (means it has an item)
                local image = slot:FindFirstChildWhichIsA("ImageLabel")
                if image and image.Visible and image.Image ~= "" then
                    -- This slot has an item, let's assume it's a gift
                    foundGift = true
                    statusLabel.Text = "Found item in hotbar!"
                    break
                end
            end
        end
    end
    
    -- If no gift found in hotbar, try to equip one
    if not foundGift then
        statusLabel.Text = "No gift in hotbar, skipping equip..."
        -- For now, we'll just proceed to click slot 13 anyway
    end
    
    -- Step 2: Wait a moment
    task.wait(1)
    
    -- Step 3: CLICK SLOT 13 DIRECTLY
    statusLabel.Text = "Step 2: Clicking slot 13..."
    statusLabel.TextColor3 = Color3.fromRGB(255, 200, 0)
    
    -- Method A: Direct coordinate click (from your screenshot: 520, 485)
    clickAtPosition(520, 485)
    
    statusLabel.Text = "Clicked! Waiting for dialog..."
    
    -- Step 4: Look for Open dialog
    task.wait(1)
    
    -- Step 5: Find and click Open button
    statusLabel.Text = "Step 3: Looking for Open button..."
    statusLabel.TextColor3 = Color3.fromRGB(200, 255, 0)
    
    local openClicked = false
    
    for attempt = 1, 10 do
        -- Look for DialogApp
        local dialogApp = playerGui:FindFirstChild("DialogApp")
        if dialogApp then
            -- Search for any button with "Open" text
            for _, obj in ipairs(dialogApp:GetDescendants()) do
                if obj:IsA("TextButton") and obj.Visible then
                    local text = obj.Text or ""
                    if string.find(string.lower(text), "open") then
                        -- Found Open button!
                        if clickGuiButton(obj) then
                            statusLabel.Text = "SUCCESS: Gift opened! üéÅ"
                            statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
                            openClicked = true
                            break
                        end
                    end
                elseif obj:IsA("ImageButton") and obj.Visible then
                    -- Check if it has "Open" text in a child
                    for _, child in ipairs(obj:GetChildren()) do
                        if child:IsA("TextLabel") then
                            local text = child.Text or ""
                            if string.find(string.lower(text), "open") then
                                if clickGuiButton(obj) then
                                    statusLabel.Text = "SUCCESS: Gift opened! üéÅ"
                                    statusLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
                                    openClicked = true
                                    break
                                end
                            end
                        end
                    end
                    if openClicked then break end
                end
            end
            if openClicked then break end
        end
        
        -- Also try to click any green button
        if not openClicked and dialogApp then
            for _, obj in ipairs(dialogApp:GetDescendants()) do
                if (obj:IsA("TextButton") or obj:IsA("ImageButton")) and obj.Visible then
                    -- Check if button is green-ish
                    if obj.BackgroundColor3.G > 0.5 then
                        if clickGuiButton(obj) then
                            statusLabel.Text = "Clicked green button!"
                            statusLabel.TextColor3 = Color3.fromRGB(0, 255, 100)
                            openClicked = true
                            break
                        end
                    end
                end
            end
        end
        
        task.wait(0.5)
    end
    
    if not openClicked then
        statusLabel.Text = "Could not find Open button!"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
        
        -- Try one more time with different coordinates
        statusLabel.Text = "Trying alternative click..."
        clickAtPosition(570, 333)  -- Slightly different position
        task.wait(1)
    end
    
    -- Final step: Reset
    task.wait(1)
    isOpening = false
    openButton.BackgroundColor3 = Color3.fromRGB(0, 100, 255)
    openButton.Text = "Open One Gift"
    
    if openClicked then
        -- Show success for a few seconds
        task.wait(2)
        statusLabel.Text = "Ready for next gift!"
        statusLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    end
end

-- DEBUG FUNCTION: Test clicking
local function debugClickTest()
    statusLabel.Text = "DEBUG: Clicking at 520,435"
    clickAtPosition(520, 435)
    task.wait(1)
    statusLabel.Text = "DEBUG: Clicked! Check if gift menu opened"
end

-- === Button Connections ===
giveAllButton.MouseButton1Click:Connect(giveAllGiftsToPlayer)
openButton.MouseButton1Click:Connect(openGift)

-- Right-click for debug test
openButton.MouseButton2Click:Connect(debugClickTest)

-- === Initial Setup ===
findTargetPlayer()
statusLabel.Text = "Ready - Click Open Gift to start"

print("Gift Giver UI Loaded!")
print("Instructions:")
print("1. Make sure you have gifts in your inventory")
print("2. Click 'Open One Gift' button")
print("3. If nothing happens, make sure slot 13 is visible")
print("4. Right-click Open button for debug test")
