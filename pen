local function trackPetPenSlots()
    local data = require(game.ReplicatedStorage.ClientModules.Core.ClientData).get_data()[game.Players.LocalPlayer.Name]
    
    if not data.idle_progression_manager or not data.idle_progression_manager.active_pets then
        print("No pets in PetPen")
        return {}
    end
    
    local petPenPets = {}
    
    -- Loop through active_pets table
    for petUniqueId, _ in pairs(data.idle_progression_manager.active_pets) do
        local pet = data.inventory.pets[petUniqueId]
        if pet then
            table.insert(petPenPets, {
                name = pet.id,
                age = pet.properties.age,
                neon = pet.properties.neon or false,
                unique_id = petUniqueId
            })
        end
    end
    
    -- Print results
    print("üêæ PETPEN SLOTS:")
    for i, pet in ipairs(petPenPets) do
        local neonText = pet.neon and "üåü" or ""
        print(string.format("%d. %s (Age: %d) %s", i, pet.name, pet.age, neonText))
    end
    
    print(string.format("Total: %d/4 slots filled", #petPenPets))
    
    return petPenPets
end

-- Use it:
trackPetPenSlots()
