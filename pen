-- Simple PetPen Tracker
local function trackPetPen()
    local clientData = require(ReplicatedStorage.ClientModules.Core.ClientData)
    local playerData = clientData.get_data()[player.Name]
    
    if not playerData or not playerData.active_pets then
        debugPrint("No active_pets data found")
        return 0
    end
    
    local petCount = 0
    for petId, petData in pairs(playerData.active_pets) do
        petCount = petCount + 1
        debugPrint("Pet in Pen: " .. petId)
    end
    
    debugPrint("Total pets in PetPen: " .. petCount .. "/4")
    return petCount
end

-- Even simpler one-liner version
local function getPetPenCount()
    local activePets = require(ReplicatedStorage.ClientModules.Core.ClientData).get_data()[player.Name].active_pets or {}
    local count = 0
    for _ in pairs(activePets) do count = count + 1 end
    return count
end

-- Usage examples:
debugPrint("Pets in Pen: " .. trackPetPen())
debugPrint("Quick count: " .. getPetPenCount() .. "/4")
