local function inspectPetPenSlots()
    local ClientData = require(game:GetService("ReplicatedStorage").ClientModules.Core.ClientData)
    local player = game.Players.LocalPlayer
    local data = ClientData.get_data()[player.Name]
    
    if data and data.idle_progression_manager and data.idle_progression_manager.active_pets then
        local activePets = data.idle_progression_manager.active_pets
        local slotsUsed = 0
        
        print("=== PETPEN SLOTS ===")
        
        for uniqueId, petData in pairs(activePets) do
            slotsUsed = slotsUsed + 1
            local petInfo = data.inventory.pets[uniqueId]
            if petInfo then
                print(string.format("Slot %d: %s (Age: %d, Neon: %s)", 
                    slotsUsed, 
                    petInfo.id or "Unknown", 
                    petInfo.properties.age or 0, 
                    tostring(petInfo.properties.neon or false)
                ))
            else
                print(string.format("Slot %d: Unknown Pet (%s)", slotsUsed, uniqueId))
            end
        end
        
        print(string.format("Total: %d/4 slots used", slotsUsed))
        print("====================")
        
        return slotsUsed
    else
        print("No active_pets found in idle_progression_manager")
        return 0
    end
end

-- Call it
inspectPetPenSlots()
