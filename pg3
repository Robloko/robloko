petsListCorner.CornerRadius = UDim.new(0, 4)
petsListCorner.Parent = petsListFrame

-- Variables
local selectedPlayer = nil
local selectedPetType = nil
local petInventory = {}
local receivedPlayers = {} -- Track players who already received in this session

local giveAllMode = false
local giveAllCoroutine = nil
local give4ToAllMode = false
local give4ToAllCoroutine = nil

-- Function to get all players except local
local function updatePlayersDropdown()
    local playersList = {}
    for _, plr in ipairs(Players:GetPlayers()) do
        if plr ~= localPlayer then
            table.insert(playersList, plr.Name)
        end
    end
    table.sort(playersList)

    -- Clear list
    for _, child in ipairs(playersListFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end

    for i, playerName in ipairs(playersList) do
        local optionButton = Instance.new("TextButton")
        optionButton.Size = UDim2.new(1, 0, 0, 16)
        optionButton.Position = UDim2.new(0, 0, 0, (i-1)*16)
        optionButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        optionButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        optionButton.Text = playerName
        optionButton.Font = Enum.Font.SourceSans
        optionButton.TextSize = 9
        optionButton.Parent = playersListFrame

        optionButton.MouseButton1Click:Connect(function()
            playersButton.Text = playerName
            selectedPlayer = Players:FindFirstChild(playerName)
            playersListFrame.Visible = false
            print("Selected player: " .. playerName)
        end)
    end

    playersListFrame.CanvasSize = UDim2.new(0, 0, 0, #playersList * 16)
end

-- Function to get unique pet types from inventory
local function updatePetsDropdown()
    petInventory = {}
    local uniqueTypes = {}

    local success, clientData = pcall(require, ReplicatedStorage.ClientModules.Core.ClientData)
    if success then
        local success2, allData = pcall(clientData.get_data, clientData)
        if success2 and allData[localPlayer.Name] and allData[localPlayer.Name].inventory and allData[localPlayer.Name].inventory.pets then
            for uniqueId, petData in pairs(allData[localPlayer.Name].inventory.pets) do
                if petData.id then
                    local petType = petData.id
                    if not uniqueTypes[petType] then
                        uniqueTypes[petType] = {}
                    end
                    table.insert(uniqueTypes[petType], uniqueId)
                    petInventory[petType] = uniqueTypes[petType]
                end
            end
        end
    end

    local typesList = {}
    for petType, _ in pairs(uniqueTypes) do
        table.insert(typesList, petType)
    end
    table.sort(typesList)

    -- Clear list
    for _, child in ipairs(petsListFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end

    for i, petType in ipairs(typesList) do
        local optionButton = Instance.new("TextButton")
        optionButton.Size = UDim2.new(1, 0, 0, 16)
        optionButton.Position = UDim2.new(0, 0, 0, (i-1)*16)
        optionButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        optionButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        optionButton.Text = petType .. " (" .. #petInventory[petType] .. ")"
        optionButton.Font = Enum.Font.SourceSans
        optionButton.TextSize = 9
        optionButton.Parent = petsListFrame

        optionButton.MouseButton1Click:Connect(function()
            petsButton.Text = petType .. " (" .. #petInventory[petType] .. ")"
            selectedPetType = petType
            petsListFrame.Visible = false
            print("Selected pet type: " .. petType)
        end)
    end

    petsListFrame.CanvasSize = UDim2.new(0, 0, 0, #typesList * 16)
end

-- Toggle players dropdown
local playersToggle = false
playersButton.MouseButton1Click:Connect(function()
    playersToggle = not playersToggle
    playersListFrame.Visible = playersToggle
    if playersToggle then
        updatePlayersDropdown()
    end
end)

-- Toggle pets dropdown
local petsToggle = false
petsButton.MouseButton1Click:Connect(function()
    petsToggle = not petsToggle
    petsListFrame.Visible = petsToggle
    if petsToggle then
        updatePetsDropdown()
    end
end)

-- Function to give N pets to a player
local function giveNPetsToPlayer(targetPlayer, petType, numPets)
    if not petInventory[petType] or #petInventory[petType] < numPets then
        print("Not enough " .. petType .. " pets for " .. targetPlayer.Name)
        return false
    end

    local petUniqueIds = {}
    for i = 1, numPets do
        table.insert(petUniqueIds, table.remove(petInventory[petType], 1)) -- Remove from inventory list
    end

    print("Giving " .. numPets .. " " .. petType .. " to " .. targetPlayer.Name)

    for i, uniqueId in ipairs(petUniqueIds) do
        local args = {
            targetPlayer,
            uniqueId
        }
        local success, result = pcall(function()
            return ReplicatedStorage:WaitForChild("API"):WaitForChild("TradeAPI/GiveItem"):InvokeServer(unpack(args))
        end)
        if success then
            print("Gave pet " .. i .. "/" .. numPets .. " to " .. targetPlayer.Name .. ": " .. uniqueId)
        else
            print("Failed to give pet " .. i .. " to " .. targetPlayer.Name .. ": " .. tostring(result))
            -- Add back if failed
            table.insert(petInventory[petType], uniqueId)
        end
        if i < numPets then
            task.wait(9) -- 9 second delay between gives
        end
    end

    return true
end

-- Continuous Give All Loop
local function continuousGiveAll()
    while giveAllMode do
        if selectedPlayer and selectedPetType and petInventory[selectedPetType] and #petInventory[selectedPetType] > 0 then
            local success = giveNPetsToPlayer(selectedPlayer, selectedPetType, #petInventory[selectedPetType])
            if success then
                print("Gave all available " .. selectedPetType .. " to " .. selectedPlayer.Name)
            end
            updatePetsDropdown() -- Rescan inventory
        else
            print("No pets available or selections invalid, waiting...")
        end
        task.wait(10) -- Scan interval
    end
end

-- Continuous Give 4 to All Loop
local function continuousGive4ToAll()
    while give4ToAllMode do
        if selectedPetType and petInventory[selectedPetType] and #petInventory[selectedPetType] >= 4 then
            local allPlayers = {}
            for _, plr in ipairs(Players:GetPlayers()) do
                if plr ~= localPlayer and not receivedPlayers[plr.Name] then
                    table.insert(allPlayers, plr)
                end
            end

            if #allPlayers == 0 then
                print("No new players to give to, waiting...")
                task.wait(30) -- Longer wait if no players
            else
                print("Giving 4 " .. selectedPetType .. " to " .. #allPlayers .. " new players")
                for _, targetPlayer in ipairs(allPlayers) do
                    local success = giveNPetsToPlayer(targetPlayer, selectedPetType, 4)
                    if success then
                        receivedPlayers[targetPlayer.Name] = true
                        print("Marked " .. targetPlayer.Name .. " as received")
                    end
                    task.wait(2) -- Small delay between players
                end
                updatePetsDropdown() -- Rescan inventory
            end
        else
            print("Not enough pets (need at least 4) or no selection, waiting...")
        end
        task.wait(30) -- Longer scan interval for all players
    end
end

-- Give All Button Click (Toggle Continuous Mode)
givePetButton.MouseButton1Click:Connect(function()
    giveAllMode = not giveAllMode
    givePetButton.Text = giveAllMode and "Give All [ON]" or "Give All [OFF]"
    givePetButton.BackgroundColor3 = giveAllMode and Color3.fromRGB(170, 0, 0) or Color3.fromRGB(0, 170, 0)

    if giveAllMode then
        if not selectedPlayer or not selectedPetType then
            print("Please select player and pet type first!")
            giveAllMode = false
            givePetButton.Text = "Give All [OFF]"
            givePetButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
            return
        end
        giveAllCoroutine = coroutine.create(continuousGiveAll)
        coroutine.resume(giveAllCoroutine)
    else
        if giveAllCoroutine then
            coroutine.close(giveAllCoroutine)
            giveAllCoroutine = nil
        end
    end
end)

-- Give 4 to All Button Click (Toggle Continuous Mode)
give4ToAllButton.MouseButton1Click:Connect(function()
    give4ToAllMode = not give4ToAllMode
    give4ToAllButton.Text = give4ToAllMode and "Give 4 to All [ON]" or "Give 4 to All [OFF]"
    give4ToAllButton.BackgroundColor3 = give4ToAllMode and Color3.fromRGB(170, 0, 0) or Color3.fromRGB(0, 170, 0)

    if give4ToAllMode then
        if not selectedPetType then
            print("Please select pet type first!")
            give4ToAllMode = false
            give4ToAllButton.Text = "Give 4 to All [OFF]"
            give4ToAllButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
            return
        end
        give4ToAllCoroutine = coroutine.create(continuousGive4ToAll)
        coroutine.resume(give4ToAllCoroutine)
    else
        if give4ToAllCoroutine then
            coroutine.close(give4ToAllCoroutine)
            give4ToAllCoroutine = nil
        end
    end
end)

-- Initial updates
updatePlayersDropdown()
updatePetsDropdown()

-- Periodic refresh for pets (inventory changes) and players
spawn(function()
    while true do
        task.wait(30) -- Refresh every 30 seconds
        updatePetsDropdown()
        updatePlayersDropdown()
    end
end)

print("Compact Draggable Pet Giver UI Loaded! Positioned at top center.")
