-- Variables
local selectedPlayer = nil
local selectedPetType = nil
local petInventory = {}
local receivedPlayers = {} -- Track for Give 4 to All
local trashReceivedPlayers = {} -- Track for Give ALL
local giveAllMode = false
local give4ToAllMode = false
local giveAllTrashMode = false
local giveAllCoroutine = nil
local give4ToAllCoroutine = nil
local giveAllTrashCoroutine = nil

-- Trash pet types list
local trashPets = {
    "basic_egg_2022_ant",
    "basic_egg_2022_mouse",
    "basic_egg_2022_camel",
    "basic_egg_2022_poodle",
    "basic_egg_2022_donkey",
    "basic_egg_2022_zebra",
    "basic_egg_2022_orangutan",
    "basic_egg_2022_parakeet",
    "basic_egg_2022_robot",
    "basic_egg_2022_corgi"
}

-- Function to get all players except local
local function updatePlayersDropdown()
    local playersList = {}
    for _, plr in ipairs(Players:GetPlayers()) do
        if plr ~= localPlayer then
            table.insert(playersList, plr.Name)
        end
    end
    table.sort(playersList)

    -- Clear list
    for _, child in ipairs(playersListFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end

    for i, playerName in ipairs(playersList) do
        local optionButton = Instance.new("TextButton")
        optionButton.Size = UDim2.new(1, 0, 0, 14)
        optionButton.Position = UDim2.new(0, 0, 0, (i-1)*14)
        optionButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        optionButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        optionButton.Text = playerName
        optionButton.Font = Enum.Font.SourceSans
        optionButton.TextSize = 8
        optionButton.Parent = playersListFrame

        optionButton.MouseButton1Click:Connect(function()
            playersButton.Text = playerName
            selectedPlayer = Players:FindFirstChild(playerName)
            playersListFrame.Visible = false
            print("Selected player: " .. playerName)
        end)
    end

    playersListFrame.CanvasSize = UDim2.new(0, 0, 0, #playersList * 14)
end

-- Function to get unique pet types from inventory
local function updatePetsDropdown()
    petInventory = {}
    local uniqueTypes = {}

    local success, clientData = pcall(require, ReplicatedStorage.ClientModules.Core.ClientData)
    if success then
        local success2, allData = pcall(clientData.get_data, clientData)
        if success2 and allData[localPlayer.Name] and allData[localPlayer.Name].inventory and allData[localPlayer.Name].inventory.pets then
            for uniqueId, petData in pairs(allData[localPlayer.Name].inventory.pets) do
                if petData.id then
                    local petType = petData.id
                    if not uniqueTypes[petType] then
                        uniqueTypes[petType] = {}
                    end
                    table.insert(uniqueTypes[petType], uniqueId)
                    petInventory[petType] = uniqueTypes[petType]
                end
            end
        end
    end

    local typesList = {}
    for petType, _ in pairs(uniqueTypes) do
        table.insert(typesList, petType)
    end
    table.sort(typesList)

    -- Clear list
    for _, child in ipairs(petsListFrame:GetChildren()) do
        if child:IsA("TextButton") then
            child:Destroy()
        end
    end

    for i, petType in ipairs(typesList) do
        local optionButton = Instance.new("TextButton")
        optionButton.Size = UDim2.new(1, 0, 0, 14)
        optionButton.Position = UDim2.new(0, 0, 0, (i-1)*14)
        optionButton.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
        optionButton.TextColor3 = Color3.fromRGB(255, 255, 255)
        optionButton.Text = petType .. " (" .. #petInventory[petType] .. ")"
        optionButton.Font = Enum.Font.SourceSans
        optionButton.TextSize = 8
        optionButton.Parent = petsListFrame

        optionButton.MouseButton1Click:Connect(function()
            petsButton.Text = petType .. " (" .. #petInventory[petType] .. ")"
            selectedPetType = petType
            petsListFrame.Visible = false
            print("Selected pet type: " .. petType)
        end)
    end

    petsListFrame.CanvasSize = UDim2.new(0, 0, 0, #typesList * 14)
end

-- Toggle players dropdown
local playersToggle = false
playersButton.MouseButton1Click:Connect(function()
    playersToggle = not playersToggle
    playersListFrame.Visible = playersToggle
    if playersToggle then
        updatePlayersDropdown()
    end
end)

-- Toggle pets dropdown
local petsToggle = false
petsButton.MouseButton1Click:Connect(function()
    petsToggle = not petsToggle
    petsListFrame.Visible = petsToggle
    if petsToggle then
        updatePetsDropdown()
    end
end)

-- Function to give N pets to a player
local function giveNPetsToPlayer(targetPlayer, petType, numPets)
    if not petInventory[petType] or #petInventory[petType] < numPets then
        return false
    end

    local petUniqueIds = {}
    for i = 1, numPets do
        table.insert(petUniqueIds, table.remove(petInventory[petType], 1))
    end

    local allSuccess = true
    for i, uniqueId in ipairs(petUniqueIds) do
        local args = { targetPlayer, uniqueId }
        local success, result = pcall(function()
            return ReplicatedStorage:WaitForChild("API"):WaitForChild("TradeAPI/GiveItem"):InvokeServer(unpack(args))
        end)
        if success then
            print("Gave " .. petType .. " #" .. i .. " to " .. targetPlayer.Name)
        else
            print("Failed to give to " .. targetPlayer.Name .. ": " .. tostring(result))
            allSuccess = false
            table.insert(petInventory[petType], uniqueId)
        end
        if i < numPets then
            task.wait(9)
        end
    end

    return allSuccess
end

-- Continuous Give All to Selected Mode
local function startGiveAllMode()
    spawn(function()
        while giveAllMode do
            if selectedPlayer and selectedPetType and petInventory[selectedPetType] and #petInventory[selectedPetType] > 0 then
                giveNPetsToPlayer(selectedPlayer, selectedPetType, #petInventory[selectedPetType])
            end
            task.wait(30) -- Scan every 30s
        end
    end)
end

-- Give All Button Toggle
giveAllButton.MouseButton1Click:Connect(function()
    giveAllMode = not giveAllMode
    giveAllButton.Text = giveAllMode and "Give All [ON]" or "Give All [OFF]"
    giveAllButton.BackgroundColor3 = giveAllMode and Color3.fromRGB(170, 0, 0) or Color3.fromRGB(0, 170, 0)
    if giveAllMode then
        startGiveAllMode()
    end
end)

-- Continuous Give 4 to All Mode
local function startGive4ToAllMode()
    spawn(function()
        while give4ToAllMode do
            local allPlayers = {}
            for _, plr in ipairs(Players:GetPlayers()) do
                if plr ~= localPlayer and not receivedPlayers[plr.Name] then
                    table.insert(allPlayers, plr)
                end
            end
            for _, targetPlayer in ipairs(allPlayers) do
                if give4ToAllMode and selectedPetType and petInventory[selectedPetType] and #petInventory[selectedPetType] >= 4 then
                    local success = giveNPetsToPlayer(targetPlayer, selectedPetType, 4)
                    if success then
                        receivedPlayers[targetPlayer.Name] = true
                    end
                    task.wait(5) -- Delay between players
                end
            end
            receivedPlayers = {} -- Reset for next full cycle
            task.wait(60) -- Full cycle every 60s
        end
    end)
end

-- Give 4 to All Button Toggle
give4ToAllButton.MouseButton1Click:Connect(function()
    give4ToAllMode = not give4ToAllMode
    give4ToAllButton.Text = give4ToAllMode and "4 to All [ON]" or "4 to All [OFF]"
    give4ToAllButton.BackgroundColor3 = give4ToAllMode and Color3.fromRGB(170, 0, 0) or Color3.fromRGB(0, 170, 0)
    if give4ToAllMode then
        startGive4ToAllMode()
    end
end)

-- Get trash pets from inventory
local function getTrashPets()
    local trashInv = {}
    local success, clientData = pcall(require, ReplicatedStorage.ClientModules.Core.ClientData)
    if success then
        local success2, allData = pcall(clientData.get_data, clientData)
        if success2 and allData[localPlayer.Name] and allData[localPlayer.Name].inventory and allData[localPlayer.Name].inventory.pets then
            for uniqueId, petData in pairs(allData[localPlayer.Name].inventory.pets) do
                if petData.id then
                    for _, trashType in ipairs(trashPets) do
                        if petData.id == trashType then
                            table.insert(trashInv, uniqueId)
                            break
                        end
                    end
                end
            end
        end
    end
    return trashInv
end

-- Continuous Give ALL Trash Mode
local function startGiveAllTrashMode()
    spawn(function()
        while giveAllTrashMode do
            local allPlayers = {}
            for _, plr in ipairs(Players:GetPlayers()) do
                if plr ~= localPlayer and not trashReceivedPlayers[plr.Name] then
                    table.insert(allPlayers, plr)
                end
            end
            local trashUniqueIds = getTrashPets()
            if #trashUniqueIds > 0 and #allPlayers > 0 then
                for i, targetPlayer in ipairs(allPlayers) do
                    if giveAllTrashMode and #trashUniqueIds > 0 then
                        local uniqueId = table.remove(trashUniqueIds, 1)
                        local args = { targetPlayer, uniqueId }
                        local success, result = pcall(function()
                            return ReplicatedStorage:WaitForChild("API"):WaitForChild("TradeAPI/GiveItem"):InvokeServer(unpack(args))
                        end)
                        if success then
                            print("Gave trash pet to " .. targetPlayer.Name)
                            trashReceivedPlayers[targetPlayer.Name] = true
                        else
                            print("Failed trash give to " .. targetPlayer.Name)
                            table.insert(trashUniqueIds, uniqueId)
                        end
                        task.wait(9)
                    end
                end
            end
            trashReceivedPlayers = {} -- Reset for next cycle
            task.wait(60) -- Scan every 60s
        end
    end)
end

-- Give ALL Trash Button Toggle
giveAllTrashButton.MouseButton1Click:Connect(function()
    giveAllTrashMode = not giveAllTrashMode
    giveAllTrashButton.Text = giveAllTrashMode and "Give ALL [ON]" or "Give ALL [OFF]"
    giveAllTrashButton.BackgroundColor3 = giveAllTrashMode and Color3.fromRGB(170, 0, 0) or Color3.fromRGB(0, 170, 0)
    if giveAllTrashMode then
        startGiveAllTrashMode()
    end
end)

-- Initial updates
updatePlayersDropdown()
updatePetsDropdown()

-- Periodic refresh
spawn(function()
    while true do
        task.wait(30)
        updatePetsDropdown()
        updatePlayersDropdown()
    end
end)

print("Ultra Compact Pet Giver UI Loaded! Droplists at bottom.")
