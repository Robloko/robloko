local Tasks = {"hungry", "sleepy", "thirsty", "bored", "dirty", "camping", "sick", "school", "hot_spring", "salon", "pizza_party"}

local Toggle1 = Section1:CreateToggle("AutoFarm Baby", Settings.BabyFarm, function(State)
    Settings.BabyFarm = State

    if Settings.BabyFarm then
        pcall(function()
            ReplicatedStorage.API["TeamAPI/ChooseTeam"]:InvokeServer("Babies", true)
        end)
    else
        pcall(function()
            ReplicatedStorage.API["TeamAPI/ChooseTeam"]:InvokeServer("Parents", true)
        end)
    end

    spawn(function()
        while wait(1) and Settings.BabyFarm do
            pcall(function()
                local playerGui = game.Players.LocalPlayer:FindFirstChildOfClass("PlayerGui")
                if not playerGui then return end

                local ailmentsMonitorApp = playerGui:FindFirstChild("AilmentsMonitorApp")
                if not ailmentsMonitorApp then return end

                local ailments = ailmentsMonitorApp:FindFirstChild("Ailments")
                if not ailments then return end

                for i, v in pairs(Tasks) do
                    if ailments:FindFirstChild(v) then
                        ReplicatedStorage.API["MonitorAPI/AddAdditive"]:FireServer(v, 1)
                        print("Resolving baby ailment:", v)
                    end
                end
            end)
        end
    end)
end)
