local Tasks = {"hungry", "sleepy", "thirsty", "bored", "dirty", "camping", "sick", "school", "hot_spring", "salon", "pizza_party"}

local Toggle1 = Section1:CreateToggle("AutoFarm Baby", Settings.BabyFarm, function(State)
    Settings.BabyFarm = State

    pcall(function()
        if State then
            ReplicatedStorage.API:WaitForChild("TeamAPI/ChooseTeam"):InvokeServer("Babies", true)
        else
            ReplicatedStorage.API:WaitForChild("TeamAPI/ChooseTeam"):InvokeServer("Parents", true)
        end
    end)

    spawn(function()
        while task.wait(1) and Settings.BabyFarm do
            pcall(function()
                local playerData = require(ReplicatedStorage.ClientModules.Core.ClientData).get_data()[game.Players.LocalPlayer.Name]
                if not playerData or not playerData.ailments_manager or not playerData.ailments_manager.baby_ailments then
                    return
                end

                for ailmentType, _ in pairs(playerData.ailments_manager.baby_ailments) do
                    if table.find(Tasks, ailmentType) then
                        ReplicatedStorage.API:WaitForChild("MonitorAPI/AddAdditive"):FireServer(ailmentType, 1)
                        print("Resolving baby ailment:", ailmentType)
                    end
                end
            end)
        end
    end)
end)
